@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login - HC Portal System</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
    
    <style>
        body, html { height: 100%; margin: 0; font-family: 'Segoe UI', Roboto, Helvetica, Arial, sans-serif; }
        
        .login-container {
            height: 100vh;
            display: flex;
        }

        /* --- BAGIAN KIRI (IMAGE) --- */
        .left-side {
            flex: 1.2; /* Lebih lebar sedikit */
            background: linear-gradient(135deg, #052c65 0%, #0056b3 100%);
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            color: white;
            position: relative;
            overflow: hidden;
        }
        
        /* Elemen Dekorasi Background */
        .bg-pattern {
            position: absolute;
            top: 0; left: 0; right: 0; bottom: 0;
            background-image: radial-gradient(circle at 20% 80%, rgba(255,255,255,0.1) 0%, transparent 20%),
                              radial-gradient(circle at 80% 20%, rgba(255,255,255,0.1) 0%, transparent 20%);
            z-index: 0;
        }

        /* --- BAGIAN KANAN (FORM) --- */
        .right-side {
            flex: 1;
            background-color: #ffffff;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 2rem;
        }

        .login-wrapper {
            width: 100%;
            max-width: 480px; /* Lebih lebar biar lega */
            padding: 3rem;
        }

        /* Styling Input yang Lebih Besar & Mewah */
        .custom-label {
            font-size: 0.85rem;
            letter-spacing: 1px;
            font-weight: 700;
            color: #6c757d;
            margin-bottom: 0.5rem;
            text-transform: uppercase;
        }

        .input-group-text {
            background: #f8f9fa;
            border-right: none;
            color: #0d6efd;
            font-size: 1.25rem; /* Ikon lebih besar */
        }
        
        .form-control {
            background: #f8f9fa;
            border-left: none;
            font-size: 1.1rem; /* Teks input lebih besar */
            padding: 0.8rem 1rem;
        }

        .form-control:focus {
            background: #fff;
            box-shadow: none;
            border-color: #dee2e6;
        }
        
        .input-group:focus-within {
            box-shadow: 0 0 0 0.25rem rgba(13, 110, 253, 0.15);
            border-radius: 0.375rem;
        }
        
        .input-group:focus-within .input-group-text,
        .input-group:focus-within .form-control {
            background-color: #fff;
            border-color: #86b7fe;
        }

        .btn-login {
            font-size: 1.1rem;
            padding: 0.8rem;
            font-weight: 600;
            letter-spacing: 0.5px;
            box-shadow: 0 4px 6px rgba(13, 110, 253, 0.3);
            transition: all 0.2s;
        }
        
        .btn-login:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 12px rgba(13, 110, 253, 0.4);
        }

        @@media (max-width: 900px) {
            .left-side { display: none; }
            .login-wrapper { padding: 1.5rem; }
        }
    </style>
</head>
<body>

    <div class="login-container">
        
        <div class="left-side">
            <div class="bg-pattern"></div>
            <div class="z-1 text-center px-4">
                <div class="mb-4">
                    <i class="bi bi-buildings" style="font-size: 6rem;"></i>
                </div>
                <h1 class="display-4 fw-bold mb-2">HC Portal</h1>
                <p class="fs-4 opacity-75">Integrated Competency Management</p>
                <div class="mt-5 pt-4 border-top border-white border-opacity-25 w-100 mx-auto">
                    <p class="small mb-0">PT Kilang Pertamina Balikpapan - Human Capital</p>
                </div>
            </div>
        </div>

        <div class="right-side">
            <div class="login-wrapper">
                <div class="mb-5">
                    <h2 class="display-6 fw-bold text-dark mb-2">Selamat Datang ðŸ‘‹</h2>
                    <p class="text-muted fs-5">Silakan masuk ke akun Anda.</p>
                </div>

                @if (ViewBag.Error != null)
                {
                    <div class="alert alert-danger d-flex align-items-center mb-4" role="alert">
                        <i class="bi bi-exclamation-circle-fill me-2 fs-5"></i>
                        <div>@ViewBag.Error</div>
                    </div>
                }

                <form method="post" asp-controller="Account" asp-action="Login">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="returnUrl" value="@ViewData["ReturnUrl"]" />
                    
                    <div class="mb-4">
                        <label class="custom-label">Email</label>
                        <div class="input-group input-group-lg border rounded">
                            <span class="input-group-text"><i class="bi bi-envelope-fill"></i></span>
                            <input type="email" name="email" class="form-control" placeholder="nama@pertamina.com" required>
                        </div>
                    </div>

                    <div class="mb-4">
                        <label class="custom-label">Kata Sandi</label>
                        <div class="input-group input-group-lg border rounded">
                            <span class="input-group-text"><i class="bi bi-lock-fill"></i></span>
                            <input type="password" name="password" class="form-control" placeholder="â€¢â€¢â€¢â€¢â€¢â€¢â€¢â€¢" required>
                        </div>
                    </div>

                    <div class="mb-4 form-check">
                        <input type="checkbox" class="form-check-input" id="rememberMe" name="rememberMe" value="true">
                        <label class="form-check-label text-muted" for="rememberMe">Ingat saya di perangkat ini</label>
                    </div>

                    <div class="d-grid mb-4">
                        <button type="submit" class="btn btn-primary btn-login">
                            MASUK KE SISTEM <i class="bi bi-arrow-right ms-2"></i>
                        </button>
                    </div>

                    <div class="text-center">
                        <a href="#" class="text-decoration-none text-muted fw-bold" onclick="alert('Hubungi IT Helpdesk Ext. 5000')">Lupa Password?</a>
                    </div>
                </form>

                <div class="mt-5 pt-4 text-center text-muted small border-top">
                    &copy; 2025 Human Capital Management System v1.2
                </div>
            </div>
        </div>

    </div>

</body>
</html>