@model HcPortal.Models.SettingsViewModel
@{
    ViewData["Title"] = "Pengaturan Akun";
}

<div class="row justify-content-center">
    <div class="col-md-8 col-lg-7">

        <a asp-controller="Account" asp-action="Profile" class="text-decoration-none small text-muted d-inline-block mb-3">
            <i class="bi bi-arrow-left me-1"></i> Kembali ke Profil
        </a>

        <h4 class="fw-bold mb-4">Pengaturan Akun</h4>

        @* --- SECTION 1: Edit Profil --- *@

        @if (TempData["ProfileSuccess"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show mb-3" role="alert">
                <i class="bi bi-check-circle-fill me-2"></i>@TempData["ProfileSuccess"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }
        @if (TempData["ProfileError"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show mb-3" role="alert">
                <i class="bi bi-x-circle-fill me-2"></i>@TempData["ProfileError"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        <p class="text-uppercase fw-bold small text-muted mb-3">Edit Profil</p>

        <form asp-action="EditProfile" method="post">
            @Html.AntiForgeryToken()

            @* Editable fields *@
            <div class="row mb-3">
                <div class="col-sm-4">
                    <label asp-for="EditProfile.FullName" class="col-form-label text-muted small fw-medium">Nama Lengkap</label>
                </div>
                <div class="col-sm-8">
                    <input asp-for="EditProfile.FullName" class="form-control" />
                    <span asp-validation-for="EditProfile.FullName" class="text-danger small"></span>
                </div>
            </div>
            <div class="row mb-3">
                <div class="col-sm-4">
                    <label asp-for="EditProfile.Position" class="col-form-label text-muted small fw-medium">Jabatan</label>
                </div>
                <div class="col-sm-8">
                    <input asp-for="EditProfile.Position" class="form-control" />
                    <span asp-validation-for="EditProfile.Position" class="text-danger small"></span>
                </div>
            </div>
            <div class="row mb-3">
                <div class="col-sm-4">
                    <label asp-for="EditProfile.PhoneNumber" class="col-form-label text-muted small fw-medium">Nomor Telepon</label>
                </div>
                <div class="col-sm-8">
                    <input asp-for="EditProfile.PhoneNumber" class="form-control" />
                    <span asp-validation-for="EditProfile.PhoneNumber" class="text-danger small"></span>
                </div>
            </div>

            @* Read-only fields *@
            <div class="row mb-3">
                <div class="col-sm-4">
                    <label class="col-form-label text-muted small fw-medium">NIP</label>
                </div>
                <div class="col-sm-8">
                    <input type="text" class="form-control" value="@(Model.NIP ?? "—")" disabled />
                    <div class="form-text text-muted small">Dikelola oleh admin</div>
                </div>
            </div>
            <div class="row mb-3">
                <div class="col-sm-4">
                    <label class="col-form-label text-muted small fw-medium">Email</label>
                </div>
                <div class="col-sm-8">
                    <input type="text" class="form-control" value="@(Model.Email ?? "—")" disabled />
                    <div class="form-text text-muted small">Dikelola oleh admin</div>
                </div>
            </div>
            <div class="row mb-3">
                <div class="col-sm-4">
                    <label class="col-form-label text-muted small fw-medium">Role</label>
                </div>
                <div class="col-sm-8">
                    <input type="text" class="form-control" value="@(Model.Role ?? "—")" disabled />
                    <div class="form-text text-muted small">Dikelola oleh admin</div>
                </div>
            </div>
            <div class="row mb-3">
                <div class="col-sm-4">
                    <label class="col-form-label text-muted small fw-medium">Bagian</label>
                </div>
                <div class="col-sm-8">
                    <input type="text" class="form-control" value="@(Model.Section ?? "—")" disabled />
                    <div class="form-text text-muted small">Dikelola oleh admin</div>
                </div>
            </div>
            <div class="row mb-3">
                <div class="col-sm-4">
                    <label class="col-form-label text-muted small fw-medium">Direktorat</label>
                </div>
                <div class="col-sm-8">
                    <input type="text" class="form-control" value="@(Model.Directorate ?? "—")" disabled />
                    <div class="form-text text-muted small">Dikelola oleh admin</div>
                </div>
            </div>
            <div class="row mb-3">
                <div class="col-sm-4">
                    <label class="col-form-label text-muted small fw-medium">Unit</label>
                </div>
                <div class="col-sm-8">
                    <input type="text" class="form-control" value="@(Model.Unit ?? "—")" disabled />
                    <div class="form-text text-muted small">Dikelola oleh admin</div>
                </div>
            </div>

            <button type="submit" class="btn btn-primary mt-2">Simpan Profil</button>
        </form>

        <hr class="my-4">

        @* --- SECTION 2: Ubah Password --- *@

        @if (TempData["PasswordSuccess"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show mb-3" role="alert">
                <i class="bi bi-check-circle-fill me-2"></i>@TempData["PasswordSuccess"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }
        @if (TempData["PasswordError"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show mb-3" role="alert">
                <i class="bi bi-x-circle-fill me-2"></i>@TempData["PasswordError"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        <p class="text-uppercase fw-bold small text-muted mb-3">Ubah Password</p>

        <form asp-action="ChangePassword" method="post" id="changePasswordForm">
            @Html.AntiForgeryToken()

            <div class="row mb-3">
                <div class="col-sm-4">
                    <label asp-for="ChangePassword.CurrentPassword" class="col-form-label text-muted small fw-medium">Password Lama</label>
                </div>
                <div class="col-sm-8">
                    <input asp-for="ChangePassword.CurrentPassword" class="form-control" type="password" autocomplete="current-password" />
                    <span asp-validation-for="ChangePassword.CurrentPassword" class="text-danger small"></span>
                </div>
            </div>
            <div class="row mb-3">
                <div class="col-sm-4">
                    <label asp-for="ChangePassword.NewPassword" class="col-form-label text-muted small fw-medium">Password Baru</label>
                </div>
                <div class="col-sm-8">
                    <input asp-for="ChangePassword.NewPassword" class="form-control" type="password" autocomplete="new-password" />
                    <span asp-validation-for="ChangePassword.NewPassword" class="text-danger small"></span>
                </div>
            </div>
            <div class="row mb-3">
                <div class="col-sm-4">
                    <label asp-for="ChangePassword.ConfirmNewPassword" class="col-form-label text-muted small fw-medium">Konfirmasi Password Baru</label>
                </div>
                <div class="col-sm-8">
                    <input asp-for="ChangePassword.ConfirmNewPassword" class="form-control" type="password" autocomplete="new-password" />
                    <span asp-validation-for="ChangePassword.ConfirmNewPassword" class="text-danger small"></span>
                </div>
            </div>

            <button type="submit" class="btn btn-primary mt-2" onclick="return confirm('Yakin ubah password?')">Ubah Password</button>
        </form>

        <hr class="my-4">

        @* --- SECTION 3: Pengaturan Lainnya --- *@

        <p class="text-uppercase fw-bold small text-muted mb-3">Pengaturan Lainnya</p>

        <div class="row mb-3 py-1">
            <div class="col-sm-8">
                <span class="text-muted">Two-Factor Authentication</span>
                <span class="badge bg-secondary ms-2" style="font-size: 0.7rem;">Segera Hadir</span>
            </div>
            <div class="col-sm-4 text-end">
                <div class="form-check form-switch d-inline-block">
                    <input class="form-check-input" type="checkbox" disabled />
                </div>
            </div>
        </div>

        <div class="row mb-3 py-1">
            <div class="col-sm-8">
                <span class="text-muted">Notifikasi Email</span>
                <span class="badge bg-secondary ms-2" style="font-size: 0.7rem;">Segera Hadir</span>
            </div>
            <div class="col-sm-4 text-end">
                <div class="form-check form-switch d-inline-block">
                    <input class="form-check-input" type="checkbox" disabled />
                </div>
            </div>
        </div>

        <div class="row mb-3 py-1">
            <div class="col-sm-8">
                <span class="text-muted">Bahasa</span>
                <span class="badge bg-secondary ms-2" style="font-size: 0.7rem;">Segera Hadir</span>
            </div>
            <div class="col-sm-4 text-end">
                <select class="form-select form-select-sm w-auto" disabled>
                    <option selected>Bahasa Indonesia</option>
                </select>
            </div>
        </div>

    </div>
</div>
