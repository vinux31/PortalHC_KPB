@model HcPortal.Models.ManageUserViewModel

@{
    ViewData["Title"] = "Edit Data Pekerja";
}

<div class="container py-4" style="max-width: 800px;">

    <!-- Breadcrumb -->
    <nav aria-label="breadcrumb" class="mb-3">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="@Url.Action("Index", "Admin")">Kelola Data</a></li>
            <li class="breadcrumb-item"><a href="@Url.Action("ManageWorkers", "Admin")">Manajemen Pekerja</a></li>
            <li class="breadcrumb-item active" aria-current="page">Edit Pekerja</li>
        </ol>
    </nav>

    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold mb-1">
                <i class="bi bi-pencil-square me-2 text-primary"></i>Edit Data Pekerja
            </h2>
            <p class="text-muted mb-0">Perbarui informasi pekerja <strong>@Model.FullName</strong></p>
        </div>
        <a href="@Url.Action("ManageWorkers", "Admin")" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left me-2"></i>Kembali
        </a>
    </div>

    <!-- Validation Summary -->
    @if (!ViewData.ModelState.IsValid)
    {
        <div class="alert alert-danger">
            <i class="bi bi-exclamation-triangle me-2"></i>
            <strong>Terdapat kesalahan:</strong>
            <ul class="mb-0 mt-1">
                @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                {
                    <li>@error.ErrorMessage</li>
                }
            </ul>
        </div>
    }

    <form asp-action="EditWorker" asp-controller="Admin" method="post" id="editWorkerForm">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="Id" />

        <!-- User ID Badge -->
        <div class="alert alert-light border d-flex align-items-center mb-4">
            <i class="bi bi-fingerprint me-2 text-muted"></i>
            <span class="small text-muted">User ID: <code>@Model.Id</code></span>
        </div>

        <!-- Personal Information -->
        <div class="card border-0 shadow-sm mb-4">
            <div class="card-header bg-primary bg-opacity-10 border-0">
                <h6 class="mb-0 fw-bold text-primary">
                    <i class="bi bi-person me-2"></i>Informasi Pribadi
                </h6>
            </div>
            <div class="card-body">
                <div class="row g-3">
                    <div class="col-md-6">
                        <label asp-for="FullName" class="form-label fw-semibold"></label>
                        <input asp-for="FullName" class="form-control" />
                        <span asp-validation-for="FullName" class="text-danger small"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="Email" class="form-label fw-semibold"></label>
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger small"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="NIP" class="form-label fw-semibold"></label>
                        <input asp-for="NIP" class="form-control" />
                        <span asp-validation-for="NIP" class="text-danger small"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="JoinDate" class="form-label fw-semibold"></label>
                        <input asp-for="JoinDate" type="date" class="form-control" />
                        <span asp-validation-for="JoinDate" class="text-danger small"></span>
                    </div>
                </div>
            </div>
        </div>

        <!-- Organization -->
        <div class="card border-0 shadow-sm mb-4">
            <div class="card-header bg-success bg-opacity-10 border-0">
                <h6 class="mb-0 fw-bold text-success">
                    <i class="bi bi-building me-2"></i>Organisasi
                </h6>
            </div>
            <div class="card-body">
                <div class="row g-3">
                    <div class="col-md-6">
                        <label asp-for="Position" class="form-label fw-semibold"></label>
                        <input asp-for="Position" class="form-control" />
                    </div>
                    <div class="col-md-6">
                        <label asp-for="Directorate" class="form-label fw-semibold"></label>
                        <input asp-for="Directorate" class="form-control" />
                    </div>
                    <div class="col-md-6">
                        <label asp-for="Section" class="form-label fw-semibold"></label>
                        <select asp-for="Section" class="form-select" id="sectionSelect">
                            <option value="">-- Pilih Bagian --</option>
                            <option value="RFCC">RFCC</option>
                            <option value="DHT / HMU">DHT / HMU</option>
                            <option value="NGP">NGP</option>
                            <option value="GAST">GAST</option>
                        </select>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="Unit" class="form-label fw-semibold"></label>
                        <select asp-for="Unit" class="form-select" id="unitSelect">
                            <option value="">-- Pilih Unit --</option>
                        </select>
                    </div>
                </div>
            </div>
        </div>

        <!-- Role & Password -->
        <div class="card border-0 shadow-sm mb-4">
            <div class="card-header bg-warning bg-opacity-10 border-0">
                <h6 class="mb-0 fw-bold text-warning">
                    <i class="bi bi-shield-lock me-2"></i>Role & Password
                </h6>
            </div>
            <div class="card-body">
                <div class="row g-3">
                    <div class="col-md-12">
                        <label asp-for="Role" class="form-label fw-semibold"></label>
                        <select asp-for="Role" class="form-select">
                            @foreach (var role in HcPortal.Models.UserRoles.AllRoles)
                            {
                                <option value="@role">@role (Level @HcPortal.Models.UserRoles.GetRoleLevel(role))</option>
                            }
                        </select>
                        <div class="form-text">Mengubah role akan otomatis mengubah level akses dan tampilan default user</div>
                    </div>
                    <div class="col-12">
                        <hr class="my-2" />
                        <div class="form-text text-info mb-2">
                            <i class="bi bi-info-circle me-1"></i>
                            Kosongkan kolom password jika tidak ingin mengubah password saat ini
                        </div>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="Password" class="form-label fw-semibold">Password Baru</label>
                        <div class="input-group">
                            <input asp-for="Password" type="password" class="form-control" id="passwordField" placeholder="Biarkan kosong jika tidak diubah" />
                            <button class="btn btn-outline-secondary" type="button" onclick="togglePassword('passwordField', this)">
                                <i class="bi bi-eye"></i>
                            </button>
                        </div>
                        <span asp-validation-for="Password" class="text-danger small"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="ConfirmPassword" class="form-label fw-semibold">Konfirmasi Password Baru</label>
                        <div class="input-group">
                            <input asp-for="ConfirmPassword" type="password" class="form-control" id="confirmPasswordField" placeholder="Ketik ulang password baru" />
                            <button class="btn btn-outline-secondary" type="button" onclick="togglePassword('confirmPasswordField', this)">
                                <i class="bi bi-eye"></i>
                            </button>
                        </div>
                        <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
                    </div>
                </div>
            </div>
        </div>

        <!-- Submit Buttons -->
        <div class="d-flex justify-content-end gap-2">
            <a href="@Url.Action("ManageWorkers", "Admin")" class="btn btn-light px-4">Batal</a>
            <button type="submit" class="btn btn-primary px-4">
                <i class="bi bi-check-lg me-2"></i>Simpan Perubahan
            </button>
        </div>
    </form>
</div>

<script>
    // --- Section → Unit Cascading ---
    const sectionUnits = {
        "RFCC": [
            "RFCC LPG Treating Unit (062)",
            "Propylene Recovery Unit (063)"
        ],
        "DHT / HMU": [
            "Diesel Hydrotreating Unit I & II (054 & 083)",
            "Hydrogen Manufacturing Unit (068)",
            "Common DHT H2 Compressor (085)"
        ],
        "NGP": [
            "Saturated Gas Concentration Unit (060)",
            "Saturated LPG Treating Unit (064)",
            "Isomerization Unit (082)",
            "Common Facilities For NLP (160)",
            "Naphtha Hydrotreating Unit II (084)"
        ],
        "GAST": [
            "RFCC NHT (053)",
            "Alkylation Unit (065)",
            "Wet Gas Sulfuric Acid Unit (066)",
            "SWS RFCC & Non RFCC (067 & 167)",
            "Amine Regeneration Unit I & II (069 & 079)",
            "Flare System (319)",
            "Sulfur Recovery Unit (169)"
        ]
    };

    const sectionSelect = document.getElementById('sectionSelect');
    const unitSelect = document.getElementById('unitSelect');
    const currentUnit = "@(Model.Unit ?? "")";

    sectionSelect.addEventListener('change', function () {
        updateUnits(this.value);
    });

    function updateUnits(section) {
        unitSelect.innerHTML = '<option value="">-- Pilih Unit --</option>';
        if (section && sectionUnits[section]) {
            sectionUnits[section].forEach(unit => {
                const opt = document.createElement('option');
                opt.value = unit;
                opt.textContent = unit;
                if (unit === currentUnit) opt.selected = true;
                unitSelect.appendChild(opt);
            });
        }
    }

    // Initialize on page load — populate units for the existing section value
    if (sectionSelect.value) {
        updateUnits(sectionSelect.value);
    }

    // Toggle password visibility
    function togglePassword(fieldId, btn) {
        const field = document.getElementById(fieldId);
        const icon = btn.querySelector('i');
        if (field.type === 'password') {
            field.type = 'text';
            icon.className = 'bi bi-eye-slash';
        } else {
            field.type = 'password';
            icon.className = 'bi bi-eye';
        }
    }
</script>
