@{
    ViewData["Title"] = "Kelola Data";
    ViewData["ContainerClass"] = "container";
}

<div class="d-flex align-items-start mb-4">
    <div>
        <h2 class="fw-bold text-dark mb-1"><i class="bi bi-gear-fill me-2 text-primary"></i>Kelola Data</h2>
        <p class="text-muted">Panel admin untuk mengelola data master, operasional, dan konfigurasi sistem.</p>
    </div>
</div>

@* Section A: Master Data *@
<div class="d-flex align-items-center mb-3">
    <span class="badge bg-primary me-2">A</span>
    <h5 class="fw-bold text-primary mb-0">Master Data</h5>
</div>
<div class="row g-3 mb-2">
    <div class="col-md-4">
        <a href="@Url.Action("KkjMatrix", "Admin")" class="text-decoration-none">
            <div class="card shadow-sm h-100 border-0">
                <div class="card-body">
                    <div class="d-flex align-items-center gap-2 mb-2">
                        <i class="bi bi-table fs-5 text-primary"></i>
                        <span class="fw-bold">KKJ Matrix</span>
                    </div>
                    <small class="text-muted">Kelola item KKJ Matrix (master kompetensi)</small>
                </div>
            </div>
        </a>
    </div>
    <div class="col-md-4">
        <a href="#" class="text-decoration-none">
            <div class="card shadow-sm h-100 border-0 opacity-75">
                <div class="card-body">
                    <div class="d-flex align-items-center gap-2 mb-2">
                        <i class="bi bi-list-check fs-5 text-primary"></i>
                        <span class="fw-bold">CPDP Items</span>
                        <span class="badge bg-secondary ms-auto" style="font-size:0.6rem;">Segera</span>
                    </div>
                    <small class="text-muted">Kelola item CPDP (kompetensi-deliverable)</small>
                </div>
            </div>
        </a>
    </div>
    <div class="col-md-4">
        <a href="#" class="text-decoration-none">
            <div class="card shadow-sm h-100 border-0 opacity-75">
                <div class="card-body">
                    <div class="d-flex align-items-center gap-2 mb-2">
                        <i class="bi bi-diagram-3 fs-5 text-primary"></i>
                        <span class="fw-bold">Assessment Competency Map</span>
                        <span class="badge bg-secondary ms-auto" style="font-size:0.6rem;">Segera</span>
                    </div>
                    <small class="text-muted">Kelola mapping assessment ke KKJ</small>
                </div>
            </div>
        </a>
    </div>
</div>

<hr class="my-4">

@* Section B: Operasional *@
<div class="d-flex align-items-center mb-3">
    <span class="badge bg-warning text-dark me-2">B</span>
    <h5 class="fw-bold text-warning mb-0">Operasional</h5>
</div>
<div class="row g-3 mb-2">
    <div class="col-md-4">
        <a href="#" class="text-decoration-none">
            <div class="card shadow-sm h-100 border-0 opacity-75">
                <div class="card-body">
                    <div class="d-flex align-items-center gap-2 mb-2">
                        <i class="bi bi-people fs-5 text-primary"></i>
                        <span class="fw-bold">Coach-Coachee Mapping</span>
                        <span class="badge bg-secondary ms-auto" style="font-size:0.6rem;">Segera</span>
                    </div>
                    <small class="text-muted">Atur assignment coach ke coachee</small>
                </div>
            </div>
        </a>
    </div>
    <div class="col-md-4">
        <a href="#" class="text-decoration-none">
            <div class="card shadow-sm h-100 border-0 opacity-75">
                <div class="card-body">
                    <div class="d-flex align-items-center gap-2 mb-2">
                        <i class="bi bi-person-badge fs-5 text-primary"></i>
                        <span class="fw-bold">Proton Track Assignment</span>
                        <span class="badge bg-secondary ms-auto" style="font-size:0.6rem;">Segera</span>
                    </div>
                    <small class="text-muted">Atur assignment coachee ke Proton track</small>
                </div>
            </div>
        </a>
    </div>
    <div class="col-md-4">
        <a href="#" class="text-decoration-none">
            <div class="card shadow-sm h-100 border-0 opacity-75">
                <div class="card-body">
                    <div class="d-flex align-items-center gap-2 mb-2">
                        <i class="bi bi-pencil-square fs-5 text-primary"></i>
                        <span class="fw-bold">Deliverable Progress Override</span>
                        <span class="badge bg-secondary ms-auto" style="font-size:0.6rem;">Segera</span>
                    </div>
                    <small class="text-muted">Override status progress deliverable</small>
                </div>
            </div>
        </a>
    </div>
    <div class="col-md-4">
        <a href="#" class="text-decoration-none">
            <div class="card shadow-sm h-100 border-0 opacity-75">
                <div class="card-body">
                    <div class="d-flex align-items-center gap-2 mb-2">
                        <i class="bi bi-clipboard-check fs-5 text-primary"></i>
                        <span class="fw-bold">Final Assessment Manager</span>
                        <span class="badge bg-secondary ms-auto" style="font-size:0.6rem;">Segera</span>
                    </div>
                    <small class="text-muted">Kelola final assessment Proton</small>
                </div>
            </div>
        </a>
    </div>
    <div class="col-md-4">
        <a href="#" class="text-decoration-none">
            <div class="card shadow-sm h-100 border-0 opacity-75">
                <div class="card-body">
                    <div class="d-flex align-items-center gap-2 mb-2">
                        <i class="bi bi-chat-text fs-5 text-primary"></i>
                        <span class="fw-bold">Coaching Session Override</span>
                        <span class="badge bg-secondary ms-auto" style="font-size:0.6rem;">Segera</span>
                    </div>
                    <small class="text-muted">Override atau hapus coaching session</small>
                </div>
            </div>
        </a>
    </div>
</div>

<hr class="my-4">

@* Section C: Kelengkapan CRUD *@
<div class="d-flex align-items-center mb-3">
    <span class="badge bg-success me-2">C</span>
    <h5 class="fw-bold text-success mb-0">Kelengkapan CRUD</h5>
</div>
<div class="row g-3 mb-2">
    <div class="col-md-4">
        <a href="#" class="text-decoration-none">
            <div class="card shadow-sm h-100 border-0 opacity-75">
                <div class="card-body">
                    <div class="d-flex align-items-center gap-2 mb-2">
                        <i class="bi bi-question-circle fs-5 text-primary"></i>
                        <span class="fw-bold">Question Bank Edit</span>
                        <span class="badge bg-secondary ms-auto" style="font-size:0.6rem;">Segera</span>
                    </div>
                    <small class="text-muted">Edit soal assessment yang sudah ada</small>
                </div>
            </div>
        </a>
    </div>
    <div class="col-md-4">
        <a href="#" class="text-decoration-none">
            <div class="card shadow-sm h-100 border-0 opacity-75">
                <div class="card-body">
                    <div class="d-flex align-items-center gap-2 mb-2">
                        <i class="bi bi-file-earmark-text fs-5 text-primary"></i>
                        <span class="fw-bold">Package Question Edit/Delete</span>
                        <span class="badge bg-secondary ms-auto" style="font-size:0.6rem;">Segera</span>
                    </div>
                    <small class="text-muted">Edit/hapus soal dalam paket ujian</small>
                </div>
            </div>
        </a>
    </div>
    <div class="col-md-4">
        <a href="#" class="text-decoration-none">
            <div class="card shadow-sm h-100 border-0 opacity-75">
                <div class="card-body">
                    <div class="d-flex align-items-center gap-2 mb-2">
                        <i class="bi bi-tools fs-5 text-primary"></i>
                        <span class="fw-bold">ProtonTrack Edit/Delete</span>
                        <span class="badge bg-secondary ms-auto" style="font-size:0.6rem;">Segera</span>
                    </div>
                    <small class="text-muted">Edit/hapus ProtonTrack</small>
                </div>
            </div>
        </a>
    </div>
    <div class="col-md-4">
        <a href="#" class="text-decoration-none">
            <div class="card shadow-sm h-100 border-0 opacity-75">
                <div class="card-body">
                    <div class="d-flex align-items-center gap-2 mb-2">
                        <i class="bi bi-key fs-5 text-primary"></i>
                        <span class="fw-bold">Password Reset</span>
                        <span class="badge bg-secondary ms-auto" style="font-size:0.6rem;">Segera</span>
                    </div>
                    <small class="text-muted">Reset password pekerja secara mandiri</small>
                </div>
            </div>
        </a>
    </div>
</div>
