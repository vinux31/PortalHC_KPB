@model List<HcPortal.Models.CareerHistory>

@{
    ViewData["Title"] = "Career Historical";
}

<div class="mb-5 text-center">
    <h2 class="fw-bold">Jejak Karir Pegawai</h2>
    <p class="text-muted">Nama: <span class="fw-bold text-primary">Budi Santoso</span> | NIP: 759921</p>
</div>

<div class="container py-2">
    <div class="main-timeline">
        @foreach (var item in Model)
        {
            <div class="timeline-item left">
                <div class="card border-0 shadow-sm mb-4">
                    <div class="card-body p-4">
                        <div class="d-flex justify-content-between align-items-center mb-2">
                            <span class="badge bg-primary fs-6">@item.Tahun</span>
                            <span class="badge bg-light text-dark border">@item.Tipe</span>
                        </div>
                        <h4 class="fw-bold mb-1">@item.Jabatan</h4>
                        <p class="text-primary fw-bold mb-2">@item.Unit</p>
                        <p class="text-muted small mb-0">
                            <i class="bi bi-file-earmark-text me-1"></i> @item.NoSK <br>
                            <i class="bi bi-info-circle me-1"></i> @item.Keterangan
                        </p>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<style>
    /* Garis Vertikal di tengah */
    .main-timeline {
        position: relative;
    }
    .main-timeline::after {
        content: '';
        position: absolute;
        width: 4px;
        background-color: #e9ecef;
        top: 0;
        bottom: 0;
        left: 31px; /* Posisi garis */
        margin-left: -3px;
    }
    
    /* Bulatan di garis */
    .timeline-item {
        position: relative;
        padding-left: 60px; /* Jarak konten dari garis */
        margin-bottom: 30px;
    }
    .timeline-item::after {
        content: '';
        position: absolute;
        width: 20px;
        height: 20px;
        right: auto;
        left: 21px; /* Posisi bulatan pas di garis */
        top: 15px;
        background-color: #fff;
        border: 4px solid #0d6efd; /* Warna Biru */
        border-radius: 50%;
        z-index: 1;
    }
</style>