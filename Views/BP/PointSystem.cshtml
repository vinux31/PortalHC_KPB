@model HcPortal.Controllers.PointSystemViewModel

@{
    ViewData["Title"] = "Point System Program";
    var progressPercent = (double)Model.TotalPoints / Model.NextLevelThreshold * 100;
}

<div class="row mb-5 align-items-center">
    <div class="col-md-8">
        <h2 class="fw-bold text-primary mb-1">Point System Program</h2>
        <p class="text-muted mb-0">Track your career acceleration points and achievements.</p>
    </div>
    <div class="col-md-4 text-end">
        <button class="btn btn-outline-primary"><i class="bi bi-info-circle me-1"></i> Program Guidelines</button>
    </div>
</div>

<!-- Overview Stats -->
<div class="row g-4 mb-5">
    <div class="col-md-4">
        <div class="card bg-primary text-white border-0 shadow h-100 position-hidden overflow-hidden">
            <div class="card-body p-4 position-relative z-1">
                <h6 class="text-uppercase opacity-75 fw-bold mb-3">Total Points Collected</h6>
                <div class="display-4 fw-bold mb-2">@Model.TotalPoints</div>
                <div class="small opacity-75">Keep it up! You are doing great.</div>
            </div>
            <!-- Decorative circle -->
            <div class="position-absolute bottom-0 end-0 mb-n4 me-n4 rounded-circle bg-white opacity-10" style="width: 150px; height: 150px;"></div>
        </div>
    </div>
    <div class="col-md-8">
        <div class="card border-0 shadow-sm h-100">
            <div class="card-body p-4">
                <div class="d-flex justify-content-between align-items-end mb-3">
                    <div>
                        <h6 class="text-uppercase text-muted fw-bold mb-1">Current Level</h6>
                        <h3 class="fw-bold text-warning"><i class="bi bi-trophy-fill me-2"></i> @Model.Level Member</h3>
                    </div>
                    <div class="text-end">
                        <div class="small text-muted mb-1">Next Level: Platinum</div>
                        <div class="fw-bold text-dark">@Model.NextLevelThreshold Points</div>
                    </div>
                </div>
                
                <div class="progress" style="height: 12px; border-radius: 10px;">
                    <div class="progress-bar bg-gradient-warning" role="progressbar" style="width: @progressPercent%" aria-valuenow="@Model.TotalPoints" aria-valuemin="0" aria-valuemax="@Model.NextLevelThreshold"></div>
                </div>
                <div class="d-flex justify-content-between mt-2 small text-muted">
                    <span>0</span>
                    <span>@Math.Round(progressPercent)% Progress</span>
                    <span>@Model.NextLevelThreshold</span>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Activity History -->
<div class="card border-0 shadow-sm">
    <div class="card-header bg-white border-0 py-3 d-flex justify-content-between align-items-center">
        <h5 class="fw-bold mb-0 text-dark">Activity History</h5>
        <div class="dropdown">
            <button class="btn btn-sm btn-light dropdown-toggle" type="button" data-bs-toggle="dropdown">Last 6 Months</button>
            <ul class="dropdown-menu border-0 shadow">
                <li><a class="dropdown-item" href="#">All Time</a></li>
                <li><a class="dropdown-item" href="#">This Year</a></li>
            </ul>
        </div>
    </div>
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="bg-light">
                    <tr>
                        <th class="ps-4">Activity Description</th>
                        <th>Date</th>
                        <th class="text-center">Status</th>
                        <th class="text-end pe-4">Points</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var activity in Model.Activities)
                    {
                        <tr>
                            <td class="ps-4">
                                <div class="fw-bold text-dark">@activity.Description</div>
                            </td>
                            <td class="text-muted small">@activity.Date</td>
                            <td class="text-center">
                                <span class="badge bg-success bg-opacity-10 text-success px-3 py-2 rounded-pill fw-normal">@activity.Status</span>
                            </td>
                            <td class="text-end pe-4">
                                <span class="fw-bold text-primary">+@activity.Points</span>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <div class="card-footer bg-white border-0 py-3 text-center">
        <a href="#" class="text-decoration-none fw-bold small">View All Activity</a>
    </div>
</div>

<style>
    .bg-gradient-warning { background: linear-gradient(45deg, #ffc107, #ffdb4d); }
    .position-hidden { position: relative; overflow: hidden; }
</style>
