@model HcPortal.Controllers.TalentProfileViewModel

@{
    ViewData["Title"] = "Talent Profile & Career Historical";
}

<div class="row mb-4">
    <div class="col-12">
        <h2 class="fw-bold text-primary mb-1">Talent Profile & Career Historical</h2>
        <p class="text-muted">Overview of employee profile, talent classification, and career journey.</p>
    </div>
</div>

<div class="row g-4">
    <!-- Left Column: Profile Card -->
    <div class="col-lg-4">
        <div class="card border-0 shadow-sm h-100">
            <div class="card-body text-center pt-5 pb-4">
                <div class="mb-3 position-relative d-inline-block">
                    <img src="https://via.placeholder.com/150" alt="Profile" class="rounded-circle img-thumbnail border-primary" style="width: 120px; height: 120px; object-fit: cover;">
                    <span class="position-absolute bottom-0 end-0 bg-primary text-white badge rounded-pill border border-2 border-white p-2" title="Verified Talent">
                        <i class="bi bi-patch-check-fill"></i>
                    </span>
                </div>
                <h4 class="fw-bold mb-1">@Model.Name</h4>
                <div class="text-muted small mb-3">NIO: @Model.NIO</div>
                
                <div class="badge bg-soft-primary text-primary mb-4 px-3 py-2 rounded-pill fs-6 fw-normal">
                    @Model.Position
                </div>

                <div class="row text-start g-3 mt-2 px-3">
                    <div class="col-6">
                        <label class="small text-muted fw-bold">Unit</label>
                        <div class="text-dark">@Model.Unit</div>
                    </div>
                    <div class="col-6">
                        <label class="small text-muted fw-bold">Directorate</label>
                        <div class="text-dark">@Model.Directorate</div>
                    </div>
                    <div class="col-6">
                        <label class="small text-muted fw-bold">Age</label>
                        <div class="text-dark">@Model.Age Years</div>
                    </div>
                    <div class="col-6">
                        <label class="small text-muted fw-bold">Tenure</label>
                        <div class="text-dark">@Model.Tenure</div>
                    </div>
                </div>

                <hr class="my-4">

                <div class="text-start px-3">
                    <label class="small text-muted fw-bold mb-2">Talent Classification</label>
                    <div class="alert alert-success d-flex align-items-center mb-0 border-0 bg-success bg-opacity-10 text-success">
                        <i class="bi bi-stars fs-4 me-3"></i>
                        <div>
                            <div class="fw-bold fs-5">@Model.TalentClassification</div>
                            <small>High Potential Candidate</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Right Column: Performance & History -->
    <div class="col-lg-8">
        
        <!-- Performance History -->
        <div class="card border-0 shadow-sm mb-4">
            <div class="card-header bg-white border-0 py-3">
                <h5 class="fw-bold mb-0 text-dark"><i class="bi bi-graph-up-arrow me-2 text-primary"></i> Performance History</h5>
            </div>
            <div class="card-body">
                <div class="row g-3">
                    @foreach (var perf in Model.PerformanceHistory ?? [])
                    {
                        <div class="col-md-4">
                            <div class="p-3 rounded-3 text-center border @((perf.Grade?.StartsWith("A") ?? false) ? "bg-primary text-white border-primary" : "bg-light border-light")">
                                <div class="small opacity-75 mb-1">@perf.Year</div>
                                <div class="display-6 fw-bold mb-1">@perf.Grade</div>
                                <div class="small fw-light text-truncate">@perf.Description</div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Career Journey Timeline -->
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-white border-0 py-3">
                <h5 class="fw-bold mb-0 text-dark"><i class="bi bi-clock-history me-2 text-primary"></i> Career Journey</h5>
            </div>
            <div class="card-body">
                <div class="timeline">
                    @foreach (var history in Model.CareerHistory ?? [])
                    {
                        <div class="d-flex pb-4 position-relative item-timeline">
                            <div class="flex-shrink-0 me-3">
                                <div class="rounded-circle bg-primary text-white d-flex align-items-center justify-content-center" style="width: 40px; height: 40px; z-index: 10; position: relative;">
                                    <i class="bi bi-briefcase"></i>
                                </div>
                                <div class="vr position-absolute start-0 ms-4 h-100 top-0 bg-secondary opacity-25" style="width: 2px;"></div>
                            </div>
                            <div>
                                <h6 class="fw-bold mb-1 text-primary">@history.Jabatan</h6>
                                <div class="small fw-bold text-dark mb-1">@history.Unit</div>
                                <div class="text-muted small mb-2"><i class="bi bi-calendar3 me-1"></i> @history.Tahun &bull; <span class="badge bg-secondary">@history.Tipe</span></div>
                                <p class="small text-muted mb-1">@history.Keterangan</p>
                                <div class="small text-muted fst-italic">Ref SK: @history.NoSK</div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .bg-soft-primary { background-color: rgba(13, 110, 253, 0.1); }
    .item-timeline:last-child .vr { display: none; }
</style>
