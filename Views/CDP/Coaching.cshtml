@model List<HcPortal.Models.CoachingLog>

@{
    ViewData["Title"] = "Laporan Coaching";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2 class="fw-bold">Laporan Coaching & Mentoring</h2>
        <p class="text-muted">Catatan bimbingan teknis dan perilaku untuk pengembangan kompetensi.</p>
    </div>
    <button type="button" class="btn btn-primary shadow-sm" data-bs-toggle="modal" data-bs-target="#addCoachingModal">
        <i class="bi bi-plus-lg me-1"></i> Catat Sesi Baru
    </button>
</div>

<!-- Summary Cards -->
<div class="row g-3 mb-4">
    <div class="col-md-4">
        <div class="card shadow-sm border-0 border-start border-4 border-primary h-100">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="flex-shrink-0">
                        <div class="bg-primary bg-opacity-10 p-3 rounded">
                            <i class="bi bi-journal-text text-primary fs-3"></i>
                        </div>
                    </div>
                    <div class="flex-grow-1 ms-3">
                        <h6 class="text-muted mb-1">Total Sesi</h6>
                        <h3 class="mb-0 fw-bold">@(Model?.Count ?? 0)</h3>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card shadow-sm border-0 border-start border-4 border-success h-100">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="flex-shrink-0">
                        <div class="bg-success bg-opacity-10 p-3 rounded">
                             <i class="bi bi-clock-history text-success fs-3"></i>
                        </div>
                    </div>
                    <div class="flex-grow-1 ms-3">
                        <h6 class="text-muted mb-1">Total Durasi</h6>
                        <h3 class="mb-0 fw-bold">3.5 Jam</h3>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card shadow-sm border-0 border-start border-4 border-warning h-100">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="flex-shrink-0">
                        <div class="bg-warning bg-opacity-10 p-3 rounded">
                             <i class="bi bi-calendar-event text-warning fs-3"></i>
                        </div>
                    </div>
                    <div class="flex-grow-1 ms-3">
                        <h6 class="text-muted mb-1">Sesi Berikutnya</h6>
                        <h4 class="mb-0 fw-bold text-dark">15 Feb 2025</h4>
                        <small class="text-muted">Review Progress Bulanan</small>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="card shadow-sm mb-4 border-0">
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="bg-light text-secondary small text-uppercase">
                    <tr>
                        <th class="p-3 ps-4">Tanggal</th>
                        <th class="p-3">Coach / Mentor</th>
                        <th class="p-3" style="width: 30%">Topik Bahasan</th>
                        <th class="p-3 text-center">Metode</th>
                        <th class="p-3 text-center">Durasi</th>
                        <th class="p-3 text-center">Status</th>
                        <th class="p-3 text-center">Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model ?? new List<HcPortal.Models.CoachingLog>())
                    {
                        <tr>
                            <td class="p-3 ps-4 text-nowrap">
                                <span class="fw-bold text-dark">@item.Tanggal.ToString("dd MMM yyyy")</span>
                            </td>
                            <td class="p-3">
                                <div class="d-flex align-items-center">
                                    <div class="bg-secondary bg-opacity-10 rounded-circle d-flex justify-content-center align-items-center me-2 text-secondary fw-bold" style="width:32px; height:32px; font-size: 0.75rem;">
                                        @(!string.IsNullOrEmpty(item.CoachName) ? item.CoachName.Substring(0,1) : "?")
                                    </div>
                                    <div>
                                        <div class="fw-bold text-dark">@item.CoachName</div>
                                        <div class="small text-muted">Manager</div>
                                    </div>
                                </div>
                            </td>
                            <td class="p-3">
                                <span class="fw-bold d-block text-primary">@item.Topik</span>
                                <small class="text-muted text-truncate d-block" style="max-width: 250px;">
                                    <i class="bi bi-chat-left-quote me-1"></i> @item.Catatan
                                </small>
                            </td>
                            <td class="p-3 text-center">
                                <span class="badge bg-light text-dark border rounded-pill fw-normal px-3">
                                    <i class="bi bi-people-fill me-1"></i> Offline
                                </span>
                            </td>
                            <td class="p-3 text-center text-muted small">
                                1 Jam 30 Menit
                            </td>
                            <td class="p-3 text-center">
                                @if(item.Status == "Verified") {
                                    <span class="badge bg-success bg-opacity-10 text-success px-3 py-2 rounded-pill border border-success">
                                        <i class="bi bi-check-circle-fill me-1"></i> Verified
                                    </span>
                                } else {
                                    <span class="badge bg-warning bg-opacity-10 text-warning px-3 py-2 rounded-pill border border-warning">
                                        <i class="bi bi-hourglass-split me-1"></i> @item.Status
                                    </span>
                                }
                            </td>
                            <td class="p-3 text-center">
                                <button class="btn btn-sm btn-outline-primary rounded-pill px-3">Detail</button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<div class="modal fade" id="addCoachingModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-lg"> <div class="modal-content">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title">Form Coaching Baru</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form>
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label class="form-label">Nama Coach / Mentor</label>
                            <input type="text" class="form-control" placeholder="Contoh: Budi Santoso">
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Tanggal Sesi</label>
                            <input type="date" class="form-control">
                        </div>
                    </div>
                    
                    <div class="mb-3">
                        <label class="form-label">Topik Pembahasan</label>
                        <input type="text" class="form-control" placeholder="Contoh: Diskusi Kendala Operasional SRU">
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Catatan Hasil / Feedback</label>
                        <textarea class="form-control" rows="3" placeholder="Tulis poin-poin penting diskusi..."></textarea>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Upload Evidence (Foto/Dokumen)</label>
                        <input type="file" class="form-control">
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Batal</button>
                <button type="button" class="btn btn-primary" onclick="alert('Simulasi: Data berhasil disimpan!')">Simpan Data</button>
            </div>
        </div>
    </div>
</div>