@model HcPortal.Models.CoachingHistoryViewModel

@{
    ViewData["Title"] = "Laporan Coaching";
    var userNames = ViewBag.UserNames as Dictionary<string, string> ?? new Dictionary<string, string>();
    var coacheeList = ViewBag.CoacheeList as List<HcPortal.Models.ApplicationUser> ?? new List<HcPortal.Models.ApplicationUser>();
    bool isCoach = ViewBag.IsCoach == true;
}

@* TempData Alerts *@
@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show">
        <i class="bi bi-check-circle me-2"></i>@TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show">
        <i class="bi bi-exclamation-circle me-2"></i>@TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@* Page Header *@
<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2 class="fw-bold">Laporan Coaching & Mentoring</h2>
        <p class="text-muted">Catatan bimbingan teknis dan perilaku untuk pengembangan kompetensi.</p>
    </div>
    @if (isCoach)
    {
        <button type="button" class="btn btn-primary shadow-sm" data-bs-toggle="modal" data-bs-target="#createSessionModal">
            <i class="bi bi-plus-lg me-1"></i> Catat Sesi Baru
        </button>
    }
</div>

@* Summary Cards *@
<div class="row g-3 mb-4">
    <div class="col-md-4">
        <div class="card shadow-sm border-0 border-start border-4 border-primary h-100">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="flex-shrink-0">
                        <div class="bg-primary bg-opacity-10 p-3 rounded">
                            <i class="bi bi-journal-text text-primary fs-3"></i>
                        </div>
                    </div>
                    <div class="flex-grow-1 ms-3">
                        <h6 class="text-muted mb-1">Total Sesi</h6>
                        <h3 class="mb-0 fw-bold">@Model.TotalSessions</h3>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card shadow-sm border-0 border-start border-4 border-success h-100">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="flex-shrink-0">
                        <div class="bg-success bg-opacity-10 p-3 rounded">
                            <i class="bi bi-check-circle text-success fs-3"></i>
                        </div>
                    </div>
                    <div class="flex-grow-1 ms-3">
                        <h6 class="text-muted mb-1">Submitted</h6>
                        <h3 class="mb-0 fw-bold">@Model.SubmittedSessions</h3>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card shadow-sm border-0 border-start border-4 border-warning h-100">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="flex-shrink-0">
                        <div class="bg-warning bg-opacity-10 p-3 rounded">
                            <i class="bi bi-list-task text-warning fs-3"></i>
                        </div>
                    </div>
                    <div class="flex-grow-1 ms-3">
                        <h6 class="text-muted mb-1">Action Items</h6>
                        <h3 class="mb-0 fw-bold">@Model.TotalActionItems</h3>
                        <small class="text-muted">@Model.OpenActionItems open</small>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@* Filter Bar *@
<div class="card shadow-sm border-0 mb-4">
    <div class="card-header bg-light d-flex justify-content-between align-items-center" style="cursor: pointer;" data-bs-toggle="collapse" data-bs-target="#filterCollapse">
        <span class="fw-semibold text-secondary"><i class="bi bi-funnel me-2"></i>Filter Riwayat</span>
        <i class="bi bi-chevron-down text-secondary"></i>
    </div>
    <div class="collapse show" id="filterCollapse">
        <div class="card-body">
            <form method="get" asp-action="Coaching">
                <div class="row g-3 align-items-end">
                    <div class="col-md-3">
                        <label class="form-label fw-semibold small">Dari Tanggal</label>
                        <input type="date" name="fromDate" class="form-control"
                               value="@Model.FromDate?.ToString("yyyy-MM-dd")" />
                    </div>
                    <div class="col-md-3">
                        <label class="form-label fw-semibold small">Sampai Tanggal</label>
                        <input type="date" name="toDate" class="form-control"
                               value="@Model.ToDate?.ToString("yyyy-MM-dd")" />
                    </div>
                    <div class="col-md-3">
                        <label class="form-label fw-semibold small">Status</label>
                        <select name="status" class="form-select">
                            <option value="">-- Semua Status --</option>
                            @if (Model.StatusFilter == "Draft")
                            {
                                <option value="Draft" selected>Draft</option>
                                <option value="Submitted">Submitted</option>
                            }
                            else if (Model.StatusFilter == "Submitted")
                            {
                                <option value="Draft">Draft</option>
                                <option value="Submitted" selected>Submitted</option>
                            }
                            else
                            {
                                <option value="Draft">Draft</option>
                                <option value="Submitted">Submitted</option>
                            }
                        </select>
                    </div>
                    <div class="col-md-3">
                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-primary flex-grow-1">
                                <i class="bi bi-search me-1"></i> Filter
                            </button>
                            <a href="@Url.Action("Coaching")" class="btn btn-outline-secondary">
                                <i class="bi bi-x-lg"></i>
                            </a>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@* Session History List *@
@if (Model.Sessions.Count == 0)
{
    <div class="card shadow-sm border-0">
        <div class="card-body text-center py-5">
            <i class="bi bi-journal-x text-muted" style="font-size: 3rem;"></i>
            <h5 class="mt-3 text-muted">Belum ada sesi coaching</h5>
            <p class="text-muted">Mulai catat sesi pertama Anda.</p>
            @if (isCoach)
            {
                <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#createSessionModal">
                    <i class="bi bi-plus-lg me-1"></i> Catat Sesi Baru
                </button>
            }
        </div>
    </div>
}
else
{
    @foreach (var session in Model.Sessions)
    {
        var coachName = userNames.ContainsKey(session.CoachId) ? userNames[session.CoachId] : session.CoachId;
        var coacheeName = userNames.ContainsKey(session.CoacheeId) ? userNames[session.CoacheeId] : session.CoacheeId;
        var statusBadgeClass = session.Status == "Submitted" ? "bg-success" : "bg-warning text-dark";
        var collapseId = $"actionItems-{session.Id}";
        var addItemCollapseId = $"addItem-{session.Id}";

        <div class="card shadow-sm border-0 mb-3">
            <div class="card-header bg-white border-bottom">
                <div class="d-flex justify-content-between align-items-start">
                    <div>
                        <span class="text-muted small me-2">
                            <i class="bi bi-calendar3 me-1"></i>@session.Date.ToString("dd MMM yyyy")
                        </span>
                        <span class="badge @statusBadgeClass rounded-pill me-2">@session.Status</span>
                        <h6 class="fw-bold d-inline mb-0">@session.Topic</h6>
                    </div>
                    <div class="text-muted small">
                        <i class="bi bi-person-fill me-1 text-primary"></i>@coachName
                        <span class="mx-1">&#8594;</span>
                        <i class="bi bi-person me-1 text-secondary"></i>@coacheeName
                    </div>
                </div>
            </div>
            <div class="card-body">
                @if (!string.IsNullOrEmpty(session.Notes))
                {
                    <p class="text-muted mb-3">
                        <i class="bi bi-chat-left-quote me-1"></i>@session.Notes
                    </p>
                }

                @* Action Items Sub-section *@
                @if (session.ActionItems != null && session.ActionItems.Count > 0)
                {
                    <div class="mb-2">
                        <button class="btn btn-sm btn-outline-secondary" type="button" data-bs-toggle="collapse" data-bs-target="#@collapseId">
                            <i class="bi bi-list-task me-1"></i> Action Items (@session.ActionItems.Count)
                        </button>
                    </div>
                    <div class="collapse show" id="@collapseId">
                        <div class="table-responsive">
                            <table class="table table-sm table-hover mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th>Deskripsi</th>
                                        <th class="text-nowrap">Tenggat Waktu</th>
                                        <th class="text-center">Status</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in session.ActionItems)
                                    {
                                        var itemBadgeClass = item.Status switch
                                        {
                                            "Done" => "bg-success",
                                            "In Progress" => "bg-info",
                                            _ => "bg-secondary"
                                        };
                                        <tr>
                                            <td>@item.Description</td>
                                            <td class="text-nowrap">@item.DueDate.ToString("dd MMM yyyy")</td>
                                            <td class="text-center">
                                                <span class="badge @itemBadgeClass rounded-pill">@item.Status</span>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                }
                else
                {
                    <p class="text-muted small mb-2"><i class="bi bi-info-circle me-1"></i>Belum ada action item.</p>
                }

                @* Add Action Item Inline Form (Coach only) *@
                @if (isCoach)
                {
                    <div class="mt-2">
                        <button class="btn btn-sm btn-outline-primary" type="button" data-bs-toggle="collapse" data-bs-target="#@addItemCollapseId">
                            <i class="bi bi-plus me-1"></i> Tambah Action Item
                        </button>
                        <div class="collapse mt-2" id="@addItemCollapseId">
                            <form method="post" asp-action="AddActionItem">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="sessionId" value="@session.Id" />
                                <div class="row g-2">
                                    <div class="col-md-6">
                                        <input type="text" name="Description" class="form-control form-control-sm"
                                               placeholder="Deskripsi action item" required />
                                    </div>
                                    <div class="col-md-4">
                                        <input type="date" name="DueDate" class="form-control form-control-sm" required />
                                    </div>
                                    <div class="col-md-2">
                                        <button type="submit" class="btn btn-sm btn-primary w-100">Tambah</button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                }
            </div>
        </div>
    }
}

@* Create Session Modal *@
@if (isCoach)
{
    <div class="modal fade" id="createSessionModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header bg-primary text-white">
                    <h5 class="modal-title"><i class="bi bi-journal-plus me-2"></i>Catat Sesi Coaching Baru</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <form method="post" asp-action="CreateSession">
                    @Html.AntiForgeryToken()
                    <div class="modal-body">
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label class="form-label fw-semibold">Coachee <span class="text-danger">*</span></label>
                                <select name="CoacheeId" class="form-select" required>
                                    <option value="">-- Pilih Coachee --</option>
                                    @foreach (var coachee in coacheeList)
                                    {
                                        <option value="@coachee.Id">@coachee.FullName â€” @coachee.Position</option>
                                    }
                                </select>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label fw-semibold">Tanggal Sesi <span class="text-danger">*</span></label>
                                <input type="date" name="Date" class="form-control"
                                       value="@DateTime.Today.ToString("yyyy-MM-dd")" required />
                            </div>
                        </div>
                        <div class="mb-3">
                            <label class="form-label fw-semibold">Topik <span class="text-danger">*</span></label>
                            <input type="text" name="Topic" class="form-control"
                                   placeholder="Contoh: Review Progress Bulanan" required />
                        </div>
                        <div class="mb-3">
                            <label class="form-label fw-semibold">Catatan</label>
                            <textarea name="Notes" class="form-control" rows="3"
                                      placeholder="Tulis poin-poin penting diskusi..."></textarea>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Batal</button>
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-save me-1"></i> Simpan Sesi
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
}
