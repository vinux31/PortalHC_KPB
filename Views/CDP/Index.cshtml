@{
    ViewData["Title"] = "CDP - Career Development Portal";
}

<div class="container-fluid py-4">
    <div class="row mb-4">
        <div class="col">
            <h2 class="mb-1">
                <i class="bi bi-person-workspace me-2"></i>Career Development Portal
            </h2>
            <p class="text-muted">Manage individual development plans, coaching, and progress tracking</p>
        </div>
    </div>

    <div class="row g-4">
        <!-- Plan IDP (Silabus) -->
        <div class="col-12 col-md-6 col-lg-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex align-items-center mb-3">
                        <div class="icon-box bg-primary bg-opacity-10 text-primary rounded-3 p-3 me-3">
                            <i class="bi bi-file-earmark-pdf fs-3"></i>
                        </div>
                        <div>
                            <h5 class="mb-0">Plan IDP (Silabus)</h5>
                            <small class="text-muted">Curriculum Documents</small>
                        </div>
                    </div>
                    <p class="text-muted mb-3">View IDP Proton curriculum and development plan documents</p>
                    <a href="@Url.Action("PlanIdp", "CDP")" class="btn btn-primary w-100">
                        <i class="bi bi-arrow-right-circle me-2"></i>View Documents
                    </a>
                </div>
            </div>
        </div>

        <!-- Progress & Tracking -->
        <div class="col-12 col-md-6 col-lg-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex align-items-center mb-3">
                        <div class="icon-box bg-warning bg-opacity-10 text-warning rounded-3 p-3 me-3">
                            <i class="bi bi-graph-up-arrow fs-3"></i>
                        </div>
                        <div>
                            <h5 class="mb-0">Progress & Tracking</h5>
                            <small class="text-muted">IDP Status</small>
                        </div>
                    </div>
                    <p class="text-muted mb-3">Track IDP completion progress and approval status</p>
                    <a href="@Url.Action("Progress", "CDP")" class="btn btn-warning w-100">
                        <i class="bi bi-arrow-right-circle me-2"></i>View Progress
                    </a>
                </div>
            </div>
        </div>

        <!-- Dashboard Monitoring -->
        <div class="col-12 col-md-6 col-lg-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex align-items-center mb-3">
                        <div class="icon-box bg-info bg-opacity-10 text-info rounded-3 p-3 me-3">
                            <i class="bi bi-speedometer2 fs-3"></i>
                        </div>
                        <div>
                            <h5 class="mb-0">Dashboard Monitoring</h5>
                            <small class="text-muted">Analytics & Reports</small>
                        </div>
                    </div>
                    <p class="text-muted mb-3">View CDP analytics, completion rates, and unit compliance</p>
                    <a href="@Url.Action("Dashboard", "CDP")" class="btn btn-info w-100">
                        <i class="bi bi-arrow-right-circle me-2"></i>View Dashboard
                    </a>
                </div>
            </div>
        </div>

    </div>

    <!-- Proton Program section -->
    <div class="row mb-3 mt-4">
        <div class="col">
            <h5 class="text-muted fw-semibold">
                <i class="bi bi-layers me-2"></i>Proton Program
            </h5>
            <hr class="mt-1 mb-3">
        </div>
    </div>

    <div class="row g-4">
        <!-- Proton Main -->
        <div class="col-12 col-md-6 col-lg-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex align-items-center mb-3">
                        <div class="icon-box bg-secondary bg-opacity-10 text-secondary rounded-3 p-3 me-3">
                            <i class="bi bi-clipboard-check fs-3"></i>
                        </div>
                        <div>
                            <h5 class="mb-0">Proton Main</h5>
                            <small class="text-muted">Track Assignment</small>
                        </div>
                    </div>
                    <p class="text-muted mb-3">Kelola track Proton dan deliverable coachee</p>
                    <a href="@Url.Action("ProtonMain", "CDP")" class="btn btn-secondary w-100">
                        <i class="bi bi-arrow-right-circle me-2"></i>View Proton Main
                    </a>
                </div>
            </div>
        </div>

        @if (User.IsInRole("HC") || User.IsInRole("Admin"))
        {
            <!-- Proton Catalog (HC/Admin only) -->
            <div class="col-12 col-md-6 col-lg-3">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-body">
                        <div class="d-flex align-items-center mb-3">
                            <div class="icon-box bg-success bg-opacity-10 text-success rounded-3 p-3 me-3">
                                <i class="bi bi-list-check fs-3"></i>
                            </div>
                            <div>
                                <h5 class="mb-0">Proton Catalog</h5>
                                <small class="text-muted">Catalog Management</small>
                            </div>
                        </div>
                        <p class="text-muted mb-3">Kelola tracks, kompetensi, sub-kompetensi, dan deliverables</p>
                        <a href="@Url.Action("Index", "ProtonCatalog")" class="btn btn-success w-100">
                            <i class="bi bi-arrow-right-circle me-2"></i>Open Catalog
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<style>
    .icon-box {
        width: 60px;
        height: 60px;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .card {
        transition: transform 0.2s, box-shadow 0.2s;
    }

    .card:hover {
        transform: translateY(-5px);
        box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15) !important;
    }
</style>
