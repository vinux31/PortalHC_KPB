@model List<HcPortal.Models.TrackingItem>
@{
    ViewData["Title"] = "Proton Progress";
    var userLevel = (int)ViewBag.UserLevel;
    var userRole = (string)ViewBag.UserRole;
    var coachees = ViewBag.Coachees as List<HcPortal.Models.ApplicationUser>;
    var selectedCoacheeId = ViewBag.SelectedCoacheeId as string;
    var progressPercent = (int)ViewBag.ProgressPercent;
    var pendingActions = (int)ViewBag.PendingActions;
    var pendingApprovals = (int)ViewBag.PendingApprovals;
    var trackLabel = ViewBag.TrackLabel as string ?? "";
    var coacheeName = ViewBag.CoacheeName as string ?? "";
}

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2><i class="bi bi-graph-up me-2"></i>Proton Progress</h2>
            <p class="text-muted mb-0">Monitor deliverable progress and approval status</p>
        </div>
        <a href="@Url.Action("Index", "CDP")" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left me-1"></i>Kembali
        </a>
    </div>

    @* Coachee info / dropdown section *@
    @if (userLevel == 6)
    {
        <div class="card mb-3">
            <div class="card-body">
                <h5 class="mb-1">@ViewBag.UserFullName</h5>
                @if (!string.IsNullOrEmpty(trackLabel))
                {
                    <span class="badge bg-info">@trackLabel</span>
                }
            </div>
        </div>
    }
    else if (userLevel == 5)
    {
        <div class="card mb-3">
            <div class="card-body">
                <label class="form-label fw-bold">Pilih Coachee</label>
                @if (coachees != null && coachees.Count > 0)
                {
                    <select id="coacheeSelect" class="form-select">
                        <option value="">-- Pilih Coachee --</option>
                        @foreach (var c in coachees)
                        {
                            if (c.Id == selectedCoacheeId)
                            {
                                <option value="@c.Id" selected>@c.FullName</option>
                            }
                            else
                            {
                                <option value="@c.Id">@c.FullName</option>
                            }
                        }
                    </select>
                }
                else
                {
                    <select class="form-select" disabled>
                        <option>Tidak ada coachee</option>
                    </select>
                }
            </div>
        </div>
    }
    else if (userLevel == 4 || userLevel == 2 || userLevel == 1)
    {
        <div class="card mb-3">
            <div class="card-body">
                <label class="form-label fw-bold">Pilih Coachee</label>
                @if (coachees != null && coachees.Count > 0)
                {
                    <select id="coacheeSelect" class="form-select">
                        <option value="">-- Pilih Coachee --</option>
                        @foreach (var c in coachees)
                        {
                            if (c.Id == selectedCoacheeId)
                            {
                                <option value="@c.Id" selected>@c.FullName</option>
                            }
                            else
                            {
                                <option value="@c.Id">@c.FullName</option>
                            }
                        }
                    </select>
                }
                else
                {
                    <select class="form-select" disabled>
                        <option>Tidak ada coachee</option>
                    </select>
                }
            </div>
        </div>
    }

    @* Coachee name + track label (when coachee selected, for non-level-6 roles) *@
    @if (userLevel != 6)
    {
        <div id="coacheeInfo" class="@(string.IsNullOrEmpty(selectedCoacheeId) ? "d-none" : "")">
            <div class="d-flex align-items-center mb-3">
                <h5 class="mb-0 me-2" id="coacheeNameDisplay">@coacheeName</h5>
                @if (!string.IsNullOrEmpty(trackLabel))
                {
                    <span class="badge bg-info" id="trackLabelDisplay">@trackLabel</span>
                }
                else
                {
                    <span class="badge bg-info d-none" id="trackLabelDisplay"></span>
                }
            </div>
        </div>
    }

    @* Summary stat cards *@
    <div id="statsSection" class="@(string.IsNullOrEmpty(selectedCoacheeId) && userLevel != 6 ? "d-none" : "")">
        <div class="row g-3 mb-4">
            <div class="col-md-4">
                <div class="card border-0 shadow-sm">
                    <div class="card-body text-center">
                        <h6 class="text-muted mb-1">Progress</h6>
                        <h3 id="statProgress" class="mb-0 text-primary">@progressPercent%</h3>
                        <div class="progress mt-2" style="height: 6px;">
                            <div class="progress-bar" id="progressBar" role="progressbar" style="width: @progressPercent%"></div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card border-0 shadow-sm">
                    <div class="card-body text-center">
                        <h6 class="text-muted mb-1">Pending Actions</h6>
                        <h3 id="statPendingActions" class="mb-0 text-warning">@pendingActions</h3>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card border-0 shadow-sm">
                    <div class="card-body text-center">
                        <h6 class="text-muted mb-1">Pending Approvals</h6>
                        <h3 id="statPendingApprovals" class="mb-0 text-info">@pendingApprovals</h3>
                    </div>
                </div>
            </div>
        </div>
    </div>

    @* Error / info messages *@
    <div id="messageArea">
        @if (ViewBag.NoTrackMessage != null)
        {
            <div class="alert alert-warning">@ViewBag.NoTrackMessage</div>
        }
        @if (ViewBag.NoProgressMessage != null)
        {
            <div class="alert alert-info">@ViewBag.NoProgressMessage</div>
        }
    </div>

    @* Loading spinner *@
    <div id="loadingSpinner" class="text-center py-5 d-none">
        <div class="spinner-border text-primary" role="status">
            <span class="visually-hidden">Loading...</span>
        </div>
        <p class="text-muted mt-2">Memuat data...</p>
    </div>

    @* Deliverable table *@
    <div id="tableSection" class="@(Model.Count == 0 && userLevel != 6 ? "d-none" : "")">
        <div class="table-responsive">
            <table class="table table-bordered table-hover" id="progressTable">
                <thead class="table-light">
                    <tr>
                        <th>Kompetensi</th>
                        <th>Sub Kompetensi</th>
                        <th>Deliverable</th>
                        <th>Evidence</th>
                        <th>Approval Sr. Spv</th>
                        <th>Approval Section Head</th>
                        <th>Approval HC</th>
                        <th>Aksi</th>
                    </tr>
                </thead>
                <tbody id="progressTableBody">
                    @{
                        var kompetensiGroups = Model
                            .GroupBy(x => x.Kompetensi)
                            .Select(g => new {
                                Kompetensi = g.Key,
                                RowCount = g.Count(),
                                SubGroups = g.GroupBy(x => x.SubKompetensi)
                                    .Select(sg => new {
                                        SubKompetensi = sg.Key,
                                        RowCount = sg.Count(),
                                        Items = sg.ToList()
                                    }).ToList()
                            }).ToList();
                    }

                    @foreach (var kompGroup in kompetensiGroups)
                    {
                        bool firstKomp = true;
                        foreach (var subGroup in kompGroup.SubGroups)
                        {
                            bool firstSub = true;
                            foreach (var item in subGroup.Items)
                            {
                                <tr>
                                    @if (firstKomp)
                                    {
                                        <td rowspan="@kompGroup.RowCount" class="align-middle fw-bold">@kompGroup.Kompetensi</td>
                                        firstKomp = false;
                                    }
                                    @if (firstSub)
                                    {
                                        <td rowspan="@subGroup.RowCount" class="align-middle">@subGroup.SubKompetensi</td>
                                        firstSub = false;
                                    }
                                    <td>@item.Deliverable</td>
                                    <td class="text-center">
                                        @if (item.EvidenceStatus == "Uploaded")
                                        {
                                            <span class="badge bg-success">Uploaded</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">Pending</span>
                                        }
                                    </td>
                                    <td class="text-center">@Html.Raw(GetApprovalBadge(item.ApprovalSrSpv))</td>
                                    <td class="text-center">@Html.Raw(GetApprovalBadge(item.ApprovalSectionHead))</td>
                                    <td class="text-center">@Html.Raw(GetApprovalBadge(item.ApprovalHC))</td>
                                    <td class="text-center">
                                        <div class="dropdown">
                                            <button class="btn btn-sm btn-outline-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown">
                                                <i class="bi bi-three-dots-vertical"></i>
                                            </button>
                                            <ul class="dropdown-menu">
                                                <li><a class="dropdown-item" href="@Url.Action("Deliverable", "CDP", new { id = item.Id })"><i class="bi bi-eye me-1"></i>Lihat Detail</a></li>
                                            </ul>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>

</div> @* end container-fluid *@

@functions {
    string GetApprovalBadge(string status)
    {
        return status switch
        {
            "Approved" => "<span class=\"badge bg-success\">Approved</span>",
            "Rejected" => "<span class=\"badge bg-danger\">Rejected</span>",
            "Pending" => "<span class=\"badge bg-warning text-dark\">Pending</span>",
            _ => "<span class=\"badge bg-secondary\">Not Started</span>",
        };
    }
}

@section Scripts {
<script>
document.addEventListener('DOMContentLoaded', function() {
    const coacheeSelect = document.getElementById('coacheeSelect');
    if (!coacheeSelect) return;

    coacheeSelect.addEventListener('change', async function() {
        const coacheeId = this.value;
        const loadingSpinner = document.getElementById('loadingSpinner');
        const tableSection = document.getElementById('tableSection');
        const statsSection = document.getElementById('statsSection');
        const coacheeInfo = document.getElementById('coacheeInfo');
        const messageArea = document.getElementById('messageArea');

        // Clear messages
        messageArea.innerHTML = '';

        if (!coacheeId) {
            tableSection.classList.add('d-none');
            statsSection.classList.add('d-none');
            if (coacheeInfo) coacheeInfo.classList.add('d-none');
            return;
        }

        // Show loading
        loadingSpinner.classList.remove('d-none');
        tableSection.classList.add('d-none');
        statsSection.classList.add('d-none');

        try {
            const response = await fetch(`@Url.Action("GetCoacheeDeliverables", "CDP")?coacheeId=${encodeURIComponent(coacheeId)}`);
            const result = await response.json();

            if (result.error) {
                messageArea.innerHTML = '<div class="alert alert-danger">Akses tidak diizinkan</div>';
                loadingSpinner.classList.add('d-none');
                return;
            }

            // Update coachee info
            if (coacheeInfo) {
                document.getElementById('coacheeNameDisplay').textContent = result.coacheeName;
                const trackBadge = document.getElementById('trackLabelDisplay');
                if (result.trackLabel) {
                    trackBadge.textContent = result.trackLabel;
                    trackBadge.classList.remove('d-none');
                } else {
                    trackBadge.classList.add('d-none');
                }
                coacheeInfo.classList.remove('d-none');
            }

            // Handle error states
            if (result.noTrack) {
                messageArea.innerHTML = '<div class="alert alert-warning">Coachee ini belum memiliki penugasan track</div>';
                loadingSpinner.classList.add('d-none');
                return;
            }
            if (result.noProgress) {
                messageArea.innerHTML = '<div class="alert alert-info">Data progress tidak ditemukan</div>';
                loadingSpinner.classList.add('d-none');
                return;
            }

            // Update stats
            document.getElementById('statProgress').textContent = result.stats.progressPercent + '%';
            document.getElementById('progressBar').style.width = result.stats.progressPercent + '%';
            document.getElementById('statPendingActions').textContent = result.stats.pendingActions;
            document.getElementById('statPendingApprovals').textContent = result.stats.pendingApprovals;
            statsSection.classList.remove('d-none');

            // Build table rows with rowspan merging
            const tbody = document.getElementById('progressTableBody');
            tbody.innerHTML = '';

            // Group items by kompetensi then subKompetensi for rowspan
            const kompGroups = {};
            result.items.forEach(item => {
                if (!kompGroups[item.kompetensi]) kompGroups[item.kompetensi] = {};
                if (!kompGroups[item.kompetensi][item.subKompetensi])
                    kompGroups[item.kompetensi][item.subKompetensi] = [];
                kompGroups[item.kompetensi][item.subKompetensi].push(item);
            });

            for (const [komp, subGroups] of Object.entries(kompGroups)) {
                let kompRowCount = 0;
                for (const items of Object.values(subGroups)) kompRowCount += items.length;
                let firstKomp = true;

                for (const [sub, items] of Object.entries(subGroups)) {
                    let firstSub = true;
                    items.forEach(item => {
                        const tr = document.createElement('tr');
                        let cells = '';

                        if (firstKomp) {
                            cells += `<td rowspan="${kompRowCount}" class="align-middle fw-bold">${escapeHtml(komp)}</td>`;
                            firstKomp = false;
                        }
                        if (firstSub) {
                            cells += `<td rowspan="${items.length}" class="align-middle">${escapeHtml(sub)}</td>`;
                            firstSub = false;
                        }

                        cells += `<td>${escapeHtml(item.deliverable)}</td>`;
                        cells += `<td class="text-center">${item.evidenceStatus === 'Uploaded'
                            ? '<span class="badge bg-success">Uploaded</span>'
                            : '<span class="badge bg-secondary">Pending</span>'}</td>`;
                        cells += `<td class="text-center">${getApprovalBadge(item.approvalSrSpv)}</td>`;
                        cells += `<td class="text-center">${getApprovalBadge(item.approvalSectionHead)}</td>`;
                        cells += `<td class="text-center">${getApprovalBadge(item.approvalHC)}</td>`;
                        cells += `<td class="text-center">
                            <div class="dropdown">
                                <button class="btn btn-sm btn-outline-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown">
                                    <i class="bi bi-three-dots-vertical"></i>
                                </button>
                                <ul class="dropdown-menu">
                                    <li><a class="dropdown-item" href="/CDP/Deliverable/${item.id}"><i class="bi bi-eye me-1"></i>Lihat Detail</a></li>
                                </ul>
                            </div>
                        </td>`;

                        tr.innerHTML = cells;
                        tbody.appendChild(tr);
                    });
                }
            }

            tableSection.classList.remove('d-none');
        } catch (err) {
            messageArea.innerHTML = '<div class="alert alert-danger">Terjadi kesalahan saat memuat data. Silakan coba lagi.</div>';
        } finally {
            loadingSpinner.classList.add('d-none');
        }
    });

    function getApprovalBadge(status) {
        switch (status) {
            case 'Approved': return '<span class="badge bg-success">Approved</span>';
            case 'Rejected': return '<span class="badge bg-danger">Rejected</span>';
            case 'Pending': return '<span class="badge bg-warning text-dark">Pending</span>';
            default: return '<span class="badge bg-secondary">Not Started</span>';
        }
    }

    function escapeHtml(text) {
        const div = document.createElement('div');
        div.textContent = text;
        return div.innerHTML;
    }
});
</script>
}
