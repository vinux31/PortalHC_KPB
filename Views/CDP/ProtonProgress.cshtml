                                            @if (firstCoacheeRow)
                                            {
                                                <td rowspan="@coacheeGroup.RowCount" class="align-middle fw-bold">@coacheeGroup.CoacheeName</td>
                                                firstCoacheeRow = false;
                                            }
                                            @if (firstKomp)
                                            {
                                                <td rowspan="@kompGroup.RowCount" class="align-middle fw-bold">@kompGroup.Kompetensi</td>
