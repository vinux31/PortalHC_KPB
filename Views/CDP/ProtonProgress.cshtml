                        @foreach (var coacheeGroup in coacheeGroups)
                        {
                            bool firstCoacheeRow = true;
                            foreach (var kompGroup in coacheeGroup.KompGroups)
                            {
                                bool firstKomp = true;
                                foreach (var subGroup in kompGroup.SubGroups)
