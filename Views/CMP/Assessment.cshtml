@model List<HcPortal.Models.AssessmentSession>

@{
    ViewData["Title"] = "My Assessments";
}

<div class="container-fluid px-4 py-4">

    <!-- Header Section -->
    <div class="mb-4 d-flex justify-content-between align-items-center">
        <div>
            <h2 class="fw-bold mb-1">
                My Assessments
            </h2>
            <p class="text-muted mb-0">
                Track and manage your competency assessments
            </p>
        </div>
    </div>

    <!-- Search Section -->
    <div class="row mb-4">
        <div class="col-md-6">
            <form method="get" asp-action="Assessment" asp-controller="CMP">
                <div class="input-group">
                    <span class="input-group-text bg-white border-end-0">
                        <i class="bi bi-search text-muted"></i>
                    </span>
                    <input type="text" class="form-control border-start-0 ps-0" name="search"
                           placeholder="Search by title, user, or category..." value="@ViewBag.SearchTerm">
                    <button class="btn btn-primary" type="submit">Search</button>
                    @if (!string.IsNullOrEmpty(ViewBag.SearchTerm))
                    {
                        <a asp-action="Assessment" class="btn btn-outline-secondary" title="Clear Search">
                            <i class="bi bi-x-lg"></i>
                        </a>
                    }
                </div>
            </form>
        </div>
    </div>

    <!-- Training Records callout -->
    <div class="alert alert-info d-flex align-items-center gap-2 mb-4" role="alert">
        <i class="bi bi-clock-history fs-5"></i>
        <span>
            Looking for completed assessments?
            <a href="@Url.Action("Records", "CMP")" class="alert-link fw-semibold">
                View your Training Records
            </a>
        </span>
    </div>

    <!-- Worker tabs: Open and Upcoming only -->
    <ul class="nav nav-tabs mb-4" id="assessmentTabs" role="tablist">
        <li class="nav-item" role="presentation">
            <button class="nav-link active" id="open-tab" data-bs-toggle="tab"
                    data-bs-target="#open-tab-pane" type="button" role="tab" data-status="open">
                Open
            </button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link" id="upcoming-tab" data-bs-toggle="tab"
                    data-bs-target="#upcoming-tab-pane" type="button" role="tab" data-status="upcoming">
                Upcoming
            </button>
        </li>
    </ul>

    <!-- Assessment Cards Grid -->
    <div class="row g-4" id="assessmentCards">
        @if (Model.Count == 0)
        {
            <!-- Empty State -->
            <div class="col-12">
                <div class="text-center py-5">
                    <i class="bi bi-inbox text-muted mb-3" style="font-size: 4rem;"></i>
                    @if (!string.IsNullOrEmpty(ViewBag.SearchTerm))
                    {
                        <h5 class="text-muted">No results found for "@ViewBag.SearchTerm"</h5>
                        <p class="text-muted small">Try adjusting your search criteria or browse all assessments.</p>
                        <a href="@Url.Action("Assessment")" class="btn btn-sm btn-outline-primary mt-2">
                            <i class="bi bi-arrow-left me-1"></i> Clear Search
                        </a>
                    }
                    else
                    {
                        <h5 class="text-muted">No assessments assigned to you</h5>
                        <p class="text-muted small">Your assessments will appear here when assigned by your administrator.</p>
                    }
                </div>
            </div>
        }
        else
        {
            @foreach (var item in Model)
            {
                var defaultBadgeClass = item.Category switch
                {
                    "OJT" => "bg-primary",
                    "IHT" => "bg-success",
                    "Training Licencor" => "bg-danger",
                    "OTS" => "bg-warning text-dark",
                    "Mandatory HSSE Training" => "bg-info",
                    "Proton" => "bg-purple",
                    _ => "bg-secondary"
                };

                // Use category default color
                var badgeClass = defaultBadgeClass;

                var statusBadgeClass = item.Status switch
                {
                    "Open" => "bg-success",
                    "Upcoming" => "bg-warning text-dark",
                    "Completed" => "bg-primary",
                    "InProgress" => "bg-warning text-dark",
                    _ => "bg-secondary"
                };

                <div class="col-12 col-md-6 col-lg-4 assessment-card" data-status="@item.Status.ToLower()">
                    <div class="card h-100 border-0 shadow-sm assessment-card-item">
                        <div class="card-body d-flex flex-column p-4">
                            <!-- Header: Category Badge -->
                            <div class="mb-3">
                                <span class="badge @badgeClass">@item.Category</span>
                            </div>

                            <!-- Title -->
                            <h5 class="card-title fw-bold mb-3">
                                @item.Title
                            </h5>

                            <!-- Assessment Info - Minimalist Clean -->
                            <div class="assessment-meta mb-3">
                                <!-- Date -->
                                <div class="meta-item">
                                    <i class="bi bi-calendar3"></i>
                                    @if (item.Status == "Upcoming")
                                    {
                                        <span>Opens @item.Schedule.ToString("dd MMM yyyy"), @item.Schedule.ToString("HH:mm") WIB</span>
                                    }
                                    else
                                    {
                                        <span>@item.Schedule.ToString("dd MMM yyyy")</span>
                                    }
                                </div>

                                <!-- Duration -->
                                <div class="meta-item">
                                    <i class="bi bi-clock"></i>
                                    <span>
                                        @{
                                            var hours = item.DurationMinutes / 60;
                                            var minutes = item.DurationMinutes % 60;
                                            var durationText = hours > 0
                                                ? (minutes > 0 ? $"{hours}h {minutes}m" : $"{hours} hour{(hours > 1 ? "s" : "")}")
                                                : $"{minutes} minute{(minutes > 1 ? "s" : "")}";
                                        }
                                        @durationText
                                    </span>
                                </div>

                                <!-- Status with Icon -->
                                <div class="meta-item">
                                    @{
                                        var statusIcon = item.Status switch
                                        {
                                            "Open" => "bi-check-circle-fill text-success",
                                            "Upcoming" => "bi-clock-fill text-warning",
                                            "Completed" => "bi-check-circle text-primary",
                                            "InProgress" => "bi-play-circle-fill text-warning",
                                            _ => "bi-circle"
                                        };
                                    }
                                    <i class="bi @statusIcon"></i>
                                    <span>Status: @item.Status</span>
                                </div>

                                <!-- Token Requirement -->
                                @if (item.IsTokenRequired)
                                {
                                    <div class="meta-item">
                                        <i class="bi bi-shield-lock text-danger"></i>
                                        <span>Token Required</span>
                                    </div>
                                }
                                else
                                {
                                    <div class="meta-item">
                                        <i class="bi bi-unlock text-success"></i>
                                        <span>Open Access</span>
                                    </div>
                                }
                            </div>

                            <!-- Action buttons -->
                            <div class="mt-auto">
                                @if (item.Status == "InProgress")
                                {
                                    <a class="btn btn-warning w-100" asp-action="StartExam" asp-route-id="@item.Id">
                                        <i class="bi bi-play-circle-fill me-1"></i>Resume
                                    </a>
                                }
                                else if (item.Status == "Open")
                                {
                                    if (item.IsTokenRequired)
                                    {
                                        <button class="btn btn-primary w-100" onclick="openTokenModal(@item.Id, '@item.Title', '@item.Category')">
                                            <i class="bi bi-shield-lock me-1"></i>Start Assessment <i class="bi bi-arrow-right ms-1"></i>
                                        </button>
                                    }
                                    else
                                    {
                                        <button class="btn btn-primary w-100" onclick="startStandardAssessment(@item.Id, '@item.Title')">
                                            Start Assessment <i class="bi bi-arrow-right ms-1"></i>
                                        </button>
                                    }
                                }
                                else if (item.Status == "Upcoming")
                                {
                                    <button class="btn btn-outline-secondary w-100" disabled>
                                        <i class="bi bi-lock-fill me-1"></i>Opens @item.Schedule.ToString("dd MMM yyyy"), @item.Schedule.ToString("HH:mm") WIB
                                    </button>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
    </div>

    <!-- Empty State for Tab Filter -->
    <div class="text-center py-5 d-none" id="emptyTabState">
        <i class="bi bi-inbox text-muted mb-3" style="font-size: 4rem;"></i>
        <h5 class="text-muted">No assessments found</h5>
        <p class="text-muted small">There are no assessments in this category.</p>
    </div>

    @* Riwayat Ujian (Exam History) — worker only *@
    @{
        var completedHistory = ViewBag.CompletedHistory as IEnumerable<dynamic>;
    }
    @if (completedHistory != null && completedHistory.Any())
    {
        <div class="mt-5">
            <h4 class="fw-bold mb-3">
                <i class="bi bi-clock-history me-2 text-primary"></i>Riwayat Ujian
            </h4>
            <div class="card border-0 shadow-sm">
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Judul</th>
                                <th>Kategori</th>
                                <th>Tanggal Selesai</th>
                                <th>Skor</th>
                                <th>Status</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in completedHistory)
                            {
                                <tr>
                                    <td class="fw-semibold">@item.Title</td>
                                    <td><span class="badge bg-secondary">@item.Category</span></td>
                                    <td>@(item.CompletedAt != null ? ((DateTime)item.CompletedAt).ToString("dd MMM yyyy") : "\u2014")</td>
                                    <td>@(item.Score != null ? item.Score + "%" : "\u2014")</td>
                                    <td>
                                        @if (item.Status == "Abandoned")
                                        {
                                            <span class="badge text-bg-warning"><i class="bi bi-slash-circle me-1"></i>Dibatalkan</span>
                                        }
                                        else if (item.IsPassed == true)
                                        {
                                            <span class="badge text-bg-success"><i class="bi bi-check-circle-fill me-1"></i>Lulus</span>
                                        }
                                        else
                                        {
                                            <span class="badge text-bg-danger"><i class="bi bi-x-circle-fill me-1"></i>Tidak Lulus</span>
                                        }
                                    </td>
                                    <td>
                                        <a asp-action="Results" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary">
                                            <i class="bi bi-eye me-1"></i>Detail
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }

</div>

@* Anti-forgery token for AJAX requests *@
@Html.AntiForgeryToken()

<!-- Token Verification Modal -->
<div class="modal fade" id="tokenModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content border-0 shadow-lg">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title fw-bold"><i class="bi bi-shield-lock me-2"></i>Security Check</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body text-center py-4">
                <i class="bi bi-usb-symbol text-primary mb-3" style="font-size: 3rem;"></i>
                <h5 class="fw-bold" id="tokenModalTitle">Verification Required</h5>
                <p class="text-muted mb-4">
                    This assessment requires a security token.<br/>
                    Please enter the 6-digit token provided by your <br/><b>HC or Assessment Supervisor</b>.
                </p>

                <div class="alert alert-warning small d-none" id="protonWarning">
                    <i class="bi bi-exclamation-triangle-fill me-1"></i>
                    <b>PROTON Restricted:</b> This assessment can ONLY be accessed from the <b>NSO Room</b>.
                </div>

                <div class="alert alert-danger small d-none mb-3" id="tokenError">
                    Invalid Token. Please try again.
                </div>

                <input type="text" id="tokenInput" class="form-control form-control-lg text-center fw-bold fs-2 mb-4 text-primary"
                       placeholder="&#8226; &#8226; &#8226; &#8226; &#8226; &#8226;" maxlength="6" style="letter-spacing: 0.5em; max-width: 300px; margin: 0 auto;">

            </div>
            <div class="modal-footer bg-light justify-content-center">
                <button type="button" class="btn btn-link text-decoration-none text-muted me-3" data-bs-dismiss="modal">Cancel</button>
                <button type="button" id="btnVerify" class="btn btn-primary px-5 fw-bold shadow-sm" onclick="verifyToken()">
                    Verify & Launch <i class="bi bi-arrow-right ms-2"></i>
                </button>
            </div>
        </div>
    </div>
</div>

<style>
    /* Purple badge for Proton */
    .bg-purple {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%) !important;
        color: white !important;
    }

    /* Assessment Cards */
    .assessment-card-item {
        transition: all 0.3s ease;
        border-radius: 12px;
        min-height: 280px;
        border: 1px solid #e9ecef;
    }

    .assessment-card-item:hover {
        transform: translateY(-4px);
        box-shadow: 0 12px 24px rgba(0, 0, 0, 0.1) !important;
        border-color: #dee2e6;
    }

    /* Assessment Meta - Minimalist Clean */
    .assessment-meta {
        flex-grow: 1;
    }

    .meta-item {
        display: flex;
        align-items: center;
        padding: 0.5rem 0;
        border-bottom: 1px solid #f1f3f5;
        font-size: 0.9rem;
        color: #495057;
    }

    .meta-item:last-child {
        border-bottom: none;
    }

    .meta-item i {
        width: 20px;
        margin-right: 0.75rem;
        font-size: 1rem;
        opacity: 0.8;
    }

    .meta-item span {
        flex: 1;
    }

    /* Tab Styling */
    #assessmentTabs .nav-link {
        border: none;
        border-bottom: 3px solid transparent;
        color: #6c757d;
        font-weight: 500;
        padding: 0.75rem 1.5rem;
        transition: all 0.3s ease;
    }

    #assessmentTabs .nav-link:hover {
        color: #0d6efd;
        border-bottom-color: #0d6efd;
    }

    #assessmentTabs .nav-link.active {
        color: #0d6efd;
        background-color: transparent;
        border-bottom: 3px solid #0d6efd;
    }

    /* Fade animation for cards */
    .assessment-card {
        animation: fadeIn 0.4s ease;
    }

    @@keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(10px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    /* Hide cards smoothly */
    .assessment-card.hidden {
        display: none;
    }

    /* Responsive */
    @@media (max-width: 768px) {
        #assessmentTabs .nav-link {
            padding: 0.5rem 1rem;
            font-size: 0.875rem;
        }

        .assessment-card-item {
            min-height: 240px;
        }

        .meta-item {
            padding: 0.4rem 0;
            font-size: 0.85rem;
        }

        .meta-item i {
            width: 18px;
            margin-right: 0.5rem;
        }
    }
</style>

@section Scripts {
<script>
    // Tab filtering for worker view
    document.addEventListener('DOMContentLoaded', function() {
        var workerTabs = document.getElementById('assessmentTabs');
        if (workerTabs) {
            const tabs = document.querySelectorAll('#assessmentTabs .nav-link');
            const cards = document.querySelectorAll('.assessment-card');
            const emptyState = document.getElementById('emptyTabState');

            // Function to filter cards
            function filterCards(status) {
                let visibleCount = 0;
                // InProgress sessions are active exams — show them alongside Open in the Open tab
                const matchStatuses = status === 'open' ? ['open', 'inprogress'] : [status];

                cards.forEach(card => {
                    const cardStatus = card.getAttribute('data-status');

                    if (matchStatuses.includes(cardStatus)) {
                        card.classList.remove('hidden');
                        visibleCount++;
                    } else {
                        card.classList.add('hidden');
                    }
                });

                // Show/hide empty state
                if (visibleCount === 0) {
                    emptyState.classList.remove('d-none');
                } else {
                    emptyState.classList.add('d-none');
                }
            }

            // Initial load - show only "Open" assessments
            filterCards('open');

            // Tab click events
            tabs.forEach(tab => {
                tab.addEventListener('shown.bs.tab', function(event) {
                    const status = this.getAttribute('data-status');
                    filterCards(status);
                });
            });
        }
    });

    // Token modal
    var tokenModalObj;
    var currentAssessmentId = 0;

    function openTokenModal(id, title, category) {
        currentAssessmentId = id;
        var modalEl = document.getElementById('tokenModal');
        tokenModalObj = new bootstrap.Modal(modalEl);

        document.getElementById('tokenModalTitle').innerText = title;
        document.getElementById('tokenInput').value = '';
        document.getElementById('tokenError').classList.add('d-none'); // Reset error

        var protonAlert = document.getElementById('protonWarning');
        if (category === "Proton") {
            protonAlert.classList.remove('d-none');
        } else {
            protonAlert.classList.add('d-none');
        }

        tokenModalObj.show();
    }

    function verifyToken() {
        var token = document.getElementById('tokenInput').value;
        var errorEl = document.getElementById('tokenError');
        var verifyBtn = document.getElementById('btnVerify');

        // Basic Client Side Check
        if (token.length < 1) {
            errorEl.innerText = "Please enter a token.";
            errorEl.classList.remove('d-none');
            return;
        }

        // Loading State
        verifyBtn.disabled = true;
        verifyBtn.innerHTML = '<span class="spinner-border spinner-border-sm me-2"></span>Verifying...';
        errorEl.classList.add('d-none');

        console.log('Verifying token for assessment:', currentAssessmentId, 'with token:', token);

        // Server Side Verification with better error handling
        $.ajax({
            url: '/CMP/VerifyToken',
            type: 'POST',
            data: {
                id: currentAssessmentId,
                token: token
            },
            success: function(response) {
                console.log('VerifyToken response:', response);
                if (response.success) {
                    // Redirect to exam
                    window.location.href = response.redirectUrl;
                } else {
                    errorEl.innerText = response.message || "Invalid token";
                    errorEl.classList.remove('d-none');
                    verifyBtn.disabled = false;
                    verifyBtn.innerHTML = 'Verify & Launch <i class="bi bi-arrow-right ms-2"></i>';
                }
            },
            error: function(xhr, status, error) {
                console.error('VerifyToken failed:', xhr, status, error);
                var errorMessage = "Server error: " + (xhr.responseText || error);
                if (xhr.status === 401) {
                    errorMessage = "Session expired. Please refresh the page and login again.";
                } else if (xhr.status === 403) {
                    errorMessage = "You are not authorized to access this assessment.";
                } else if (xhr.status === 404) {
                    errorMessage = "Assessment not found.";
                }
                errorEl.innerText = errorMessage;
                errorEl.classList.remove('d-none');
                verifyBtn.disabled = false;
                verifyBtn.innerHTML = 'Verify & Launch <i class="bi bi-arrow-right ms-2"></i>';
            }
        });
    }

    function startStandardAssessment(id, title) {
        if(confirm("Start " + title + " now?")) {
            console.log('Starting standard assessment:', id);

            // No token required, just hit the verify endpoint to get redirect
            $.ajax({
                url: '/CMP/VerifyToken',
                type: 'POST',
                data: {
                    id: id,
                    token: ""
                },
                success: function(response) {
                    console.log('StartAssessment response:', response);
                    if (response.success) {
                        window.location.href = response.redirectUrl;
                    } else {
                        alert('Error: ' + (response.message || 'Failed to start assessment'));
                    }
                },
                error: function(xhr, status, error) {
                    console.error('StartAssessment failed:', xhr, status, error);
                    var errorMessage = "Failed to start assessment: " + (xhr.responseText || error);
                    if (xhr.status === 401) {
                        errorMessage = "Session expired. Please refresh the page and login again.";
                    }
                    alert(errorMessage);
                }
            });
        }
    }
</script>
}
