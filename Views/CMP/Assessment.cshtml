@model List<HcPortal.Models.AssessmentSession>

@{
    ViewData["Title"] = "My Assessments";
}

<div class="container-fluid px-4 py-4">

    <!-- Header Section -->
    <div class="mb-4">
        <h2 class="fw-bold mb-1">My Assessments</h2>
        <p class="text-muted mb-0">Track and manage your competency assessments</p>
    </div>

    <!-- Search Section -->
    <div class="row mb-4">
        <div class="col-md-6">
            <form method="get" asp-action="Assessment" asp-controller="CMP">
                <div class="input-group">
                    <span class="input-group-text bg-white border-end-0">
                        <i class="bi bi-search text-muted"></i>
                    </span>
                    <input type="text" class="form-control border-start-0 ps-0" name="search" 
                           placeholder="Search by title, user, or category..." value="@ViewBag.SearchTerm">
                    <button class="btn btn-primary" type="submit">Search</button>
                    @if (!string.IsNullOrEmpty(ViewBag.SearchTerm))
                    {
                        <a asp-action="Assessment" class="btn btn-outline-secondary" title="Clear Search">
                            <i class="bi bi-x-lg"></i>
                        </a>
                    }
                </div>
            </form>
        </div>
    </div>

    <!-- Tab Navigation -->
    <ul class="nav nav-tabs mb-4" id="assessmentTabs" role="tablist">
        <li class="nav-item" role="presentation">
            <button class="nav-link active" id="all-tab" data-bs-toggle="tab" data-bs-target="#all-tab-pane" type="button" role="tab" data-status="all">
                All
            </button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link" id="open-tab" data-bs-toggle="tab" data-bs-target="#open-tab-pane" type="button" role="tab" data-status="open">
                Open
            </button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link" id="upcoming-tab" data-bs-toggle="tab" data-bs-target="#upcoming-tab-pane" type="button" role="tab" data-status="upcoming">
                Upcoming
            </button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link" id="completed-tab" data-bs-toggle="tab" data-bs-target="#completed-tab-pane" type="button" role="tab" data-status="completed">
                Completed
            </button>
        </li>
    </ul>

    <!-- Assessment Cards Grid -->
    <div class="row g-4" id="assessmentCards">
        @if (Model.Count == 0)
        {
            <!-- Empty State -->
            <div class="col-12">
                <div class="text-center py-5">
                    <i class="bi bi-inbox text-muted mb-3" style="font-size: 4rem;"></i>
                    @if (!string.IsNullOrEmpty(ViewBag.SearchTerm))
                    {
                        <h5 class="text-muted">No results found for "@ViewBag.SearchTerm"</h5>
                        <p class="text-muted small">Try adjusting your search criteria or browse all assessments.</p>
                        <a href="@Url.Action("Assessment")" class="btn btn-sm btn-outline-primary mt-2">
                            <i class="bi bi-arrow-left me-1"></i> Clear Search
                        </a>
                    }
                    else if (User.IsInRole("Admin") || User.IsInRole("HC"))
                    {
                        <h5 class="text-muted">No assessments created yet</h5>
                        <p class="text-muted small">Create your first assessment to get started.</p>
                        <a asp-action="CreateAssessment" class="btn btn-primary mt-3">
                            <i class="bi bi-plus-circle me-1"></i> Create Assessment
                        </a>
                    }
                    else
                    {
                        <h5 class="text-muted">No assessments assigned to you</h5>
                        <p class="text-muted small">Your assessments will appear here when assigned by your administrator.</p>
                    }
                </div>
            </div>
        }
        else
        {
            @foreach (var item in Model)
            {
                var defaultBadgeClass = item.Category switch
                {
                    "OJT" => "bg-primary",
                    "IHT" => "bg-success",
                    "Training Licencor" => "bg-danger",
                    "OTS" => "bg-warning text-dark",
                    "Mandatory HSSE Training" => "bg-info",
                    "Proton" => "bg-purple",
                    _ => "bg-secondary"
                };

                // Use BannerColor if set, otherwise fall back to category default
                var badgeClass = !string.IsNullOrEmpty(item.BannerColor) && item.BannerColor != "bg-primary"
                    ? item.BannerColor
                    : defaultBadgeClass;

                var statusBadgeClass = item.Status switch
                {
                    "Open" => "bg-success",
                    "Upcoming" => "bg-warning text-dark",
                    "Completed" => "bg-primary",
                    _ => "bg-secondary"
                };

                <div class="col-12 col-md-6 col-lg-4 assessment-card" data-status="@item.Status.ToLower()">
                    <div class="card h-100 border-0 shadow-sm assessment-card-item">
                        <div class="card-body d-flex flex-column p-4">
                            <!-- Header: Category & Status -->
                            <div class="d-flex justify-content-between align-items-center mb-3">
                                <span class="badge @badgeClass">@item.Category</span>
                                <span class="badge @statusBadgeClass">@item.Status</span>
                            </div>

                            <!-- Title -->
                            <h5 class="card-title fw-bold mb-4 flex-grow-1">
                                @if (item.IsTokenRequired)
                                {
                                    <i class="bi bi-shield-lock text-primary me-1" title="Token Required"></i>
                                }
                                @item.Title
                            </h5>

                            <!-- Action Button -->
                            <div class="mt-auto">
                                @if (item.Status == "Open")
                                {
                                    if (item.IsTokenRequired)
                                    {
                                        <button class="btn btn-primary w-100" onclick="openTokenModal(@item.Id, '@item.Title', '@item.Category')">
                                            <i class="bi bi-shield-lock me-1"></i>Start Assessment <i class="bi bi-arrow-right ms-1"></i>
                                        </button>
                                    }
                                    else
                                    {
                                        <button class="btn btn-primary w-100" onclick="startStandardAssessment(@item.Id, '@item.Title')">
                                            Start Assessment <i class="bi bi-arrow-right ms-1"></i>
                                        </button>
                                    }
                                }
                                else if (item.Status == "Upcoming")
                                {
                                    var daysUntil = (item.Schedule - DateTime.Now).Days;
                                    var daysText = daysUntil > 0
                                        ? $"Available in {daysUntil} day{(daysUntil != 1 ? "s" : "")}"
                                        : "Coming soon";

                                    <button class="btn btn-outline-secondary w-100" disabled>
                                        <i class="bi bi-lock-fill me-1"></i>@daysText
                                    </button>
                                }
                                else if (item.Status == "Completed")
                                {
                                    var scoreText = item.Score.HasValue ? $" (Score: {item.Score})" : "";
                                    <a href="@Url.Action("Certificate", "CMP", new { id = item.Id })" class="btn btn-outline-primary w-100" target="_blank">
                                        <i class="bi bi-award me-1"></i>View Certificate@scoreText
                                    </a>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
    </div>

    <!-- Empty State for Tab Filter -->
    <div class="text-center py-5 d-none" id="emptyTabState">
        <i class="bi bi-inbox text-muted mb-3" style="font-size: 4rem;"></i>
        <h5 class="text-muted">No assessments found</h5>
        <p class="text-muted small">There are no assessments in this category.</p>
    </div>

    <!-- Pagination -->
    @if (ViewBag.TotalPages > 1)
    {
        <nav aria-label="Assessment pagination" class="mt-4">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <div class="text-muted small">
                    Showing @((ViewBag.CurrentPage - 1) * ViewBag.PageSize + 1) to @(Math.Min(ViewBag.CurrentPage * ViewBag.PageSize, ViewBag.TotalCount)) of @ViewBag.TotalCount assessments
                </div>
                <ul class="pagination pagination-sm mb-0">
                    @* First Page *@
                    <li class="page-item @(ViewBag.CurrentPage == 1 ? "disabled" : "")">
                        <a class="page-link" href="?page=1@(string.IsNullOrEmpty(ViewBag.SearchTerm) ? "" : "&search=" + ViewBag.SearchTerm)">
                            <i class="bi bi-chevron-double-left"></i>
                        </a>
                    </li>

                    @* Previous Page *@
                    <li class="page-item @(ViewBag.CurrentPage == 1 ? "disabled" : "")">
                        <a class="page-link" href="?page=@(ViewBag.CurrentPage - 1)@(string.IsNullOrEmpty(ViewBag.SearchTerm) ? "" : "&search=" + ViewBag.SearchTerm)">
                            <i class="bi bi-chevron-left"></i>
                        </a>
                    </li>

                    @* Page Numbers *@
                    @{
                        var startPage = Math.Max(1, ViewBag.CurrentPage - 2);
                        var endPage = Math.Min(ViewBag.TotalPages, ViewBag.CurrentPage + 2);

                        for (int i = startPage; i <= endPage; i++)
                        {
                            <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                                <a class="page-link" href="?page=@i@(string.IsNullOrEmpty(ViewBag.SearchTerm) ? "" : "&search=" + ViewBag.SearchTerm)">@i</a>
                            </li>
                        }
                    }

                    @* Next Page *@
                    <li class="page-item @(ViewBag.CurrentPage == ViewBag.TotalPages ? "disabled" : "")">
                        <a class="page-link" href="?page=@(ViewBag.CurrentPage + 1)@(string.IsNullOrEmpty(ViewBag.SearchTerm) ? "" : "&search=" + ViewBag.SearchTerm)">
                            <i class="bi bi-chevron-right"></i>
                        </a>
                    </li>

                    @* Last Page *@
                    <li class="page-item @(ViewBag.CurrentPage == ViewBag.TotalPages ? "disabled" : "")">
                        <a class="page-link" href="?page=@ViewBag.TotalPages@(string.IsNullOrEmpty(ViewBag.SearchTerm) ? "" : "&search=" + ViewBag.SearchTerm)">
                            <i class="bi bi-chevron-double-right"></i>
                        </a>
                    </li>
                </ul>
            </div>
        </nav>
    }

</div>

<!-- Token Verification Modal -->
<div class="modal fade" id="tokenModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content border-0 shadow-lg">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title fw-bold"><i class="bi bi-shield-lock me-2"></i>Security Check</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body text-center py-4">
                <i class="bi bi-usb-symbol text-primary mb-3" style="font-size: 3rem;"></i>
                <h5 class="fw-bold" id="tokenModalTitle">Verification Required</h5>
                <p class="text-muted mb-4">
                    This assessment requires a security token.<br/>
                    Please enter the 6-digit token provided by your <br/><b>HC or Assessment Supervisor</b>.
                </p>

                <div class="alert alert-warning small d-none" id="protonWarning">
                    <i class="bi bi-exclamation-triangle-fill me-1"></i>
                    <b>PROTON Restricted:</b> This assessment can ONLY be accessed from the <b>NSO Room</b>.
                </div>

                <div class="alert alert-danger small d-none mb-3" id="tokenError">
                    Invalid Token. Please try again.
                </div>

                <input type="text" id="tokenInput" class="form-control form-control-lg text-center fw-bold fs-2 mb-4 text-primary"
                       placeholder="• • • • • •" maxlength="6" style="letter-spacing: 0.5em; max-width: 300px; margin: 0 auto;">

            </div>
            <div class="modal-footer bg-light justify-content-center">
                <button type="button" class="btn btn-link text-decoration-none text-muted me-3" data-bs-dismiss="modal">Cancel</button>
                <button type="button" id="btnVerify" class="btn btn-primary px-5 fw-bold shadow-sm" onclick="verifyToken()">
                    Verify & Launch <i class="bi bi-arrow-right ms-2"></i>
                </button>
            </div>
        </div>
    </div>
</div>

<style>
    /* Purple badge for Proton */
    .bg-purple {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%) !important;
        color: white !important;
    }

    /* Assessment Cards */
    .assessment-card-item {
        transition: all 0.3s ease;
        border-radius: 8px;
        min-height: 180px;
    }

    .assessment-card-item:hover {
        transform: scale(1.02);
        box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15) !important;
    }

    /* Tab Styling */
    #assessmentTabs .nav-link {
        border: none;
        border-bottom: 3px solid transparent;
        color: #6c757d;
        font-weight: 500;
        padding: 0.75rem 1.5rem;
        transition: all 0.3s ease;
    }

    #assessmentTabs .nav-link:hover {
        color: #0d6efd;
        border-bottom-color: #0d6efd;
    }

    #assessmentTabs .nav-link.active {
        color: #0d6efd;
        background-color: transparent;
        border-bottom: 3px solid #0d6efd;
    }

    /* Fade animation for cards */
    .assessment-card {
        animation: fadeIn 0.4s ease;
    }

    @@keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(10px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    /* Hide cards smoothly */
    .assessment-card.hidden {
        display: none;
    }

    /* Responsive */
    @@media (max-width: 768px) {
        #assessmentTabs .nav-link {
            padding: 0.5rem 1rem;
            font-size: 0.875rem;
        }

        .assessment-card-item {
            min-height: 160px;
        }
    }
</style>

<script>
    // Tab filtering
    document.addEventListener('DOMContentLoaded', function() {
        const tabs = document.querySelectorAll('#assessmentTabs .nav-link');
        const cards = document.querySelectorAll('.assessment-card');
        const emptyState = document.getElementById('emptyTabState');

        tabs.forEach(tab => {
            tab.addEventListener('shown.bs.Tab', function(event) {
                const status = this.getAttribute('data-status');
                let visibleCount = 0;

                cards.forEach(card => {
                    const cardStatus = card.getAttribute('data-status');

                    if (status === 'all' || cardStatus === status) {
                        card.classList.remove('hidden');
                        visibleCount++;
                    } else {
                        card.classList.add('hidden');
                    }
                });

                // Show/hide empty state
                if (visibleCount === 0) {
                    emptyState.classList.remove('d-none');
                } else {
                    emptyState.classList.add('d-none');
                }
            });
        });
    });

    // Token modal
    var tokenModalObj;
    var currentAssessmentId = 0;

    function openTokenModal(id, title, category) {
        currentAssessmentId = id;
        var modalEl = document.getElementById('tokenModal');
        tokenModalObj = new bootstrap.Modal(modalEl);

        document.getElementById('tokenModalTitle').innerText = title;
        document.getElementById('tokenInput').value = '';
        document.getElementById('tokenError').classList.add('d-none'); // Reset error

        var protonAlert = document.getElementById('protonWarning');
        if (category === "Proton") {
            protonAlert.classList.remove('d-none');
        } else {
            protonAlert.classList.add('d-none');
        }

        tokenModalObj.show();
    }

    function verifyToken() {
        var token = document.getElementById('tokenInput').value;
        var errorEl = document.getElementById('tokenError');
        var verifyBtn = document.getElementById('btnVerify');
        
        // Basic Client Side Check
        if (token.length < 1) {
            errorEl.innerText = "Please enter a token.";
            errorEl.classList.remove('d-none');
            return;
        }

        // Loading State
        verifyBtn.disabled = true;
        verifyBtn.innerHTML = '<span class="spinner-border spinner-border-sm me-2"></span>Verifying...';
        errorEl.classList.add('d-none');

        // Server Side Verification
        $.post('/CMP/VerifyToken', { id: currentAssessmentId, token: token })
            .done(function(response) {
                if (response.success) {
                    window.location.href = response.redirectUrl;
                } else {
                    errorEl.innerText = response.message;
                    errorEl.classList.remove('d-none');
                    verifyBtn.disabled = false;
                    verifyBtn.innerHTML = 'Verify & Launch <i class="bi bi-arrow-right ms-2"></i>';
                }
            })
            .fail(function() {
                errorEl.innerText = "Server error. Please try again.";
                errorEl.classList.remove('d-none');
                verifyBtn.disabled = false;
                verifyBtn.innerHTML = 'Verify & Launch <i class="bi bi-arrow-right ms-2"></i>';
            });
    }

    function startStandardAssessment(id, title) {
        if(confirm("Start " + title + " now?")) {
            // No token required, just hit the verify endpoint to get redirect
             $.post('/CMP/VerifyToken', { id: id, token: "" })
                .done(function(response) {
                    if (response.success) {
                        window.location.href = response.redirectUrl;
                    } else {
                        alert(response.message);
                    }
                });
        }
    }

    function viewCertificate(title) {
        alert("Viewing certificate for: " + title);
    }
</script>
