@model HcPortal.Models.AssessmentSession
@{
    Layout = null; // No standard layout for certificate
    var date = DateTime.Now.ToString("dd MMMM yyyy");
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Certificate - @Model.Title</title>
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:ital,wght@0,400;0,700;1,400&family=Lato:wght@300;400;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <style>
        body {
            margin: 0;
            padding: 0;
            background: #f0f0f0;
            font-family: 'Lato', sans-serif;
            -webkit-print-color-adjust: exact;
        }

        .no-print {
            position: fixed;
            top: 20px;
            right: 20px;
            z-index: 1000;
        }

        .btn-print {
            background: #0d6efd;
            color: white;
            border: none;
            padding: 10px 20px;
            border-radius: 5px;
            cursor: pointer;
            font-size: 16px;
            font-weight: bold;
            box-shadow: 0 2px 5px rgba(0,0,0,0.2);
            transition: all 0.3s;
            text-decoration: none;
            display: inline-block;
        }
        .btn-print:hover { background: #0b5ed7; }
        
        .btn-back {
            background: #6c757d;
            color: white;
            margin-right: 10px;
        }
        .btn-back:hover { background: #5c636a; }

        .certificate-container {
            width: 297mm; /* A4 Landscape */
            height: 210mm;
            background: white;
            margin: 20px auto;
            position: relative;
            box-shadow: 0 0 20px rgba(0,0,0,0.1);
            overflow: hidden;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .border-pattern {
            position: absolute;
            top: 10px; left: 10px; right: 10px; bottom: 10px;
            border: 2px solid #1a4a8d;
            z-index: 1;
        }
        
        .border-pattern::before {
            content: "";
            position: absolute;
            top: 5px; left: 5px; right: 5px; bottom: 5px;
            border: 5px double #c49a00; /* Gold */
        }

        .bg-watermark {
            position: absolute;
            opacity: 0.05;
            width: 60%;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            z-index: 0;
            pointer-events: none;
        }

        .content {
            z-index: 2;
            text-align: center;
            width: 80%;
        }

        .logo {
            font-family: 'Playfair Display', serif;
            font-size: 24px;
            font-weight: bold;
            color: #1a4a8d;
            margin-bottom: 30px;
            letter-spacing: 2px;
        }

        .header-title {
            font-family: 'Playfair Display', serif;
            font-size: 48px;
            font-weight: 700;
            color: #111;
            text-transform: uppercase;
            margin-bottom: 10px;
            color: #1a4a8d;
        }

        .subtitle {
            font-size: 18px;
            color: #555;
            margin-bottom: 40px;
            font-style: italic;
        }

        .recipient-name {
            font-family: 'Playfair Display', serif;
            font-size: 42px;
            color: #000;
            border-bottom: 2px solid #ccc;
            display: inline-block;
            padding-bottom: 5px;
            margin-bottom: 30px;
            min-width: 400px;
            font-weight: bold;
            font-style: italic;
        }

        .achievement-text {
            font-size: 18px;
            color: #444;
            margin-bottom: 10px;
            line-height: 1.6;
        }

        .course-title {
            font-size: 28px;
            font-weight: bold;
            color: #c49a00; /* Gold */
            margin: 10px 0 30px 0;
            text-transform: uppercase;
        }

        .footer {
            margin-top: 60px;
            display: flex;
            justify-content: space-between;
            align-items: flex-end;
            padding: 0 50px;
        }

        .signature img {
            max-height: 60px;
            margin-bottom: -10px;
        }

        .signature-line {
            border-top: 1px solid #333;
            width: 200px;
            margin-top: 10px;
        }
        
        .signature-label {
            font-size: 14px;
            color: #666;
            margin-top: 5px;
        }

        .badge-score {
            position: absolute;
            bottom: 40px;
            right: 40px;
            width: 100px;
            height: 100px;
            background: #1a4a8d;
            color: white;
            border-radius: 50%;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            box-shadow: 0 4px 8px rgba(0,0,0,0.2);
            border: 4px solid #c49a00;
        }
        .badge-score span {
            font-size: 12px;
            text-transform: uppercase;
        }
        .badge-score strong {
            font-size: 28px;
        }

        @@media print {
            .no-print { display: none; }
            body { background: white; -webkit-print-color-adjust: exact; }
            .certificate-container { margin: 0; box-shadow: none; page-break-after: always; }
            @@page { size: landscape; margin: 0; }
        }
    </style>
</head>
<body>

    <div class="no-print">
        <a href="/CMP/Assessment" class="btn-print btn-back"><i class="bi bi-arrow-left"></i> Back</a>
        <button onclick="window.print()" class="btn-print"><i class="bi bi-printer"></i> Print / Save as PDF</button>
    </div>

    <div class="certificate-container">
        <div class="border-pattern"></div>
        
        <!-- Watermark / BG Icon -->
        <div class="bg-watermark">
            <svg viewBox="0 0 24 24" fill="#1a4a8d" xmlns="http://www.w3.org/2000/svg">
                <path d="M12 2L1 21H23L12 2ZM12 6L19.53 19H4.47L12 6Z"/>
            </svg>
        </div>

        <div class="content">
            <div class="logo">
                <i class="bi bi-building"></i> HC PORTAL KPB
            </div>

            <div class="header-title">Certificate of Completion</div>
            <div class="subtitle">This verifies that</div>

            <div class="recipient-name">@Model.User?.FullName</div>

            <div class="achievement-text">
                Has successfully completed the competency assessment module
            </div>

            <div class="course-title">@Model.Title</div>

            <div class="achievement-text">
                Demonstrating proficiency and understanding of the subject matter.
            </div>

            <div class="footer">
                <div class="date-section">
                    <div style="font-size: 18px; font-weight: bold;">@date</div>
                    <div class="signature-line"></div>
                    <div class="signature-label">Date of Issue</div>
                </div>

                <div class="signature-section">
                    <!-- Signature Placeholder -->
                    <div style="font-family: 'Playfair Display', cursive; font-size: 24px; color: #1a4a8d;">
                        Authorized Sig.
                    </div>
                    <div class="signature-line"></div>
                    <div class="signature-label">HC Manager</div>
                </div>
            </div>
        </div>

        @if(Model.Score.HasValue)
        {
            <div class="badge-score">
                <span>Score</span>
                <strong>@Model.Score%</strong>
            </div>
        }
    </div>

</body>
</html>
