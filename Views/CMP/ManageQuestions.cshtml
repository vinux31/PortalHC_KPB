@model HcPortal.Models.AssessmentSession

@{
    ViewData["Title"] = "Manage Questions";
}

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h3 mb-0 text-gray-800">Manage Questions</h1>
            <p class="text-muted">Assessment: <strong>@Model.Title</strong></p>
        </div>
        <a asp-action="Assessment" class="btn btn-secondary">
            <i class="bi bi-arrow-left me-2"></i>Back to List
        </a>
    </div>

    <div class="row">
        <!-- Add Question Form -->
        <div class="col-md-4">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Add New Question</h6>
                </div>
                <div class="card-body">
                    <form asp-action="AddQuestion" method="post">
                        <input type="hidden" name="has_id" value="@Model.Id" />
                        
                        <div class="mb-3">
                            <label class="form-label">Question Text</label>
                            <textarea name="question_text" class="form-control" rows="3" required></textarea>
                        </div>

                        <label class="form-label">Options</label>
                        <div class="mb-2 input-group">
                            <span class="input-group-text bg-light">A</span>
                            <input type="text" name="options" class="form-control" required placeholder="Option A" />
                            <div class="input-group-text">
                                <input class="form-check-input mt-0" type="radio" name="correct_option_index" value="0" checked aria-label="Correct answer">
                            </div>
                        </div>
                        <div class="mb-2 input-group">
                            <span class="input-group-text bg-light">B</span>
                            <input type="text" name="options" class="form-control" required placeholder="Option B" />
                            <div class="input-group-text">
                                <input class="form-check-input mt-0" type="radio" name="correct_option_index" value="1" aria-label="Correct answer">
                            </div>
                        </div>
                        <div class="mb-2 input-group">
                            <span class="input-group-text bg-light">C</span>
                            <input type="text" name="options" class="form-control" required placeholder="Option C" />
                            <div class="input-group-text">
                                <input class="form-check-input mt-0" type="radio" name="correct_option_index" value="2" aria-label="Correct answer">
                            </div>
                        </div>
                        <div class="mb-3 input-group">
                            <span class="input-group-text bg-light">D</span>
                            <input type="text" name="options" class="form-control" required placeholder="Option D" />
                            <div class="input-group-text">
                                <input class="form-check-input mt-0" type="radio" name="correct_option_index" value="3" aria-label="Correct answer">
                            </div>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-plus-circle me-2"></i>Add Question
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <!-- Question List -->
        <div class="col-md-8">
            <div class="card shadow mb-4">
                <div class="card-header py-3 d-flex justify-content-between align-items-center">
                    <h6 class="m-0 font-weight-bold text-primary">Current Questions (@Model.Questions.Count)</h6>
                    <span class="badge bg-info">Total Score: @Model.Questions.Sum(q => q.ScoreValue)</span>
                </div>
                <div class="card-body">
                    @if (!Model.Questions.Any())
                    {
                        <div class="text-center py-5 text-muted">
                            <i class="bi bi-clipboard-x display-4"></i>
                            <p class="mt-2">No questions added yet.</p>
                        </div>
                    }
                    else
                    {
                        <div class="list-group list-group-flush">
                            @foreach (var question in Model.Questions.OrderBy(q => q.Order))
                            {
                                <div class="list-group-item px-0">
                                    <div class="d-flex justify-content-between">
                                        <h6 class="mb-1 fw-bold">@question.Order. @question.QuestionText</h6>
                                        <form asp-action="DeleteQuestion" method="post" onsubmit="return confirm('Delete this question?');">
                                            <input type="hidden" name="id" value="@question.Id" />
                                            <button type="submit" class="btn btn-sm btn-outline-danger border-0">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </form>
                                    </div>
                                    <ul class="list-unstyled ms-3 mt-2 mb-1">
                                        @foreach (var opt in question.Options)
                                        {
                                            <li class="@(opt.IsCorrect ? "text-success fw-bold" : "text-muted")">
                                                <i class="bi @(opt.IsCorrect ? "bi-check-circle-fill" : "bi-circle") me-2"></i>
                                                @opt.OptionText
                                            </li>
                                        }
                                    </ul>
                                </div>
                            }
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
