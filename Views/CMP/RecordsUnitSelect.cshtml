@model HcPortal.Models.RecordsSelectViewModel

@{
    ViewData["Title"] = "Pilih Unit - Capability Building Records";
    ViewData["ContainerClass"] = "container";
}

<style>
    .unit-card {
        transition: all 0.3s ease;
        border: 2px solid transparent;
        cursor: pointer;
    }
    
    .unit-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 8px 16px rgba(0,0,0,0.12) !important;
        border-color: #0d6efd;
    }
    
    .unit-icon {
        font-size: 2.5rem;
        color: #0d6efd;
    }
</style>

<div class="row justify-content-center mt-5">
    <div class="col-lg-10">
        <!-- Header -->
        <div class="text-center mb-5">
            <h1 class="display-5 fw-bold text-primary mb-3">Pilih Unit</h1>
            <p class="lead text-muted">Bagian: <strong>@Model.SelectedSection</strong></p>
            <div class="mt-3">
                <span class="badge bg-primary bg-opacity-10 text-primary px-3 py-2">
                    <i class="bi bi-person-badge me-2"></i>@Model.UserRole
                </span>
            </div>
        </div>

        <!-- Units List -->
        <div class="row g-3">
            @foreach (var unit in Model.AvailableUnits)
            {
                <div class="col-md-6">
                    <a href="@Url.Action("Records", "CMP", new { section = Model.SelectedSection, unit = unit })" class="text-decoration-none">
                        <div class="card unit-card shadow-sm h-100">
                            <div class="card-body d-flex align-items-center p-4">
                                <div class="unit-icon me-3">
                                    <i class="bi bi-gear-fill"></i>
                                </div>
                                <div class="flex-grow-1">
                                    <h5 class="fw-bold text-dark mb-1">@unit</h5>
                                    <small class="text-muted">Klik untuk lihat training records</small>
                                </div>
                                <div>
                                    <i class="bi bi-arrow-right text-primary fs-4"></i>
                                </div>
                            </div>
                        </div>
                    </a>
                </div>
            }
        </div>

        <!-- Back Button -->
        <div class="text-center mt-5">
            @if (Model.UserRole == "HC")
            {
                <a href="@Url.Action("Records", "CMP")" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left me-2"></i>Kembali ke Pilih Bagian
                </a>
            }
            else
            {
                <a href="@Url.Action("Index", "Home")" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left me-2"></i>Kembali ke Home
                </a>
            }
        </div>
    </div>
</div>
