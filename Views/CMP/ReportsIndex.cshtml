@model HcPortal.Models.ReportsDashboardViewModel
@{
    ViewData["Title"] = "Assessment Reports";
}

<div class="container-fluid px-4 py-4">

    <!-- Page Header -->
    <div class="mb-4">
        <h2 class="fw-bold mb-1">
            <i class="bi bi-clipboard-data me-2 text-primary"></i>Assessment Reports
        </h2>
        <p class="text-muted mb-0">View and analyze assessment results across all users</p>
    </div>

    <!-- Summary Statistics Cards -->
    <div class="row g-4 mb-4">
        <!-- Total Assigned Card -->
        <div class="col-md-3">
            <div class="card border-0 shadow-sm bg-primary text-white h-100 position-relative">
                <div class="card-body">
                    <div class="position-absolute end-0 top-0 p-3 opacity-25">
                        <i class="bi bi-clipboard-check" style="font-size: 3rem;"></i>
                    </div>
                    <h6 class="text-uppercase small mb-2 fw-semibold opacity-75">Total Assigned</h6>
                    <h2 class="fw-bold mb-0">@Model.TotalAssigned</h2>
                    <small class="opacity-75">All assessment sessions</small>
                </div>
            </div>
        </div>

        <!-- Completed Card -->
        <div class="col-md-3">
            <div class="card border-0 shadow-sm bg-info text-white h-100 position-relative">
                <div class="card-body">
                    <div class="position-absolute end-0 top-0 p-3 opacity-25">
                        <i class="bi bi-check-circle-fill" style="font-size: 3rem;"></i>
                    </div>
                    <h6 class="text-uppercase small mb-2 fw-semibold opacity-75">Completed</h6>
                    <h2 class="fw-bold mb-0">@Model.TotalAssessments</h2>
                    <small class="opacity-75">Completed assessments</small>
                </div>
            </div>
        </div>

        <!-- Pass Rate Card -->
        <div class="col-md-3">
            <div class="card border-0 shadow-sm bg-success text-white h-100 position-relative">
                <div class="card-body">
                    <div class="position-absolute end-0 top-0 p-3 opacity-25">
                        <i class="bi bi-trophy-fill" style="font-size: 3rem;"></i>
                    </div>
                    <h6 class="text-uppercase small mb-2 fw-semibold opacity-75">Pass Rate</h6>
                    <h2 class="fw-bold mb-0">@Model.PassRate.ToString("F1")%</h2>
                    <small class="opacity-75">@Model.PassedCount passed</small>
                </div>
            </div>
        </div>

        <!-- Average Score Card -->
        <div class="col-md-3">
            <div class="card border-0 shadow-sm bg-warning text-dark h-100 position-relative">
                <div class="card-body">
                    <div class="position-absolute end-0 top-0 p-3 opacity-25">
                        <i class="bi bi-star-fill" style="font-size: 3rem;"></i>
                    </div>
                    <h6 class="text-uppercase small mb-2 fw-semibold opacity-75">Average Score</h6>
                    <h2 class="fw-bold mb-0">@Model.AverageScore.ToString("F1")</h2>
                    <small class="opacity-75">Out of 100</small>
                </div>
            </div>
        </div>
    </div>

    <!-- Filter Form -->
    <div class="card border-0 shadow-sm mb-4">
        <div class="card-header bg-white border-0 py-3">
            <h5 class="mb-0 fw-semibold">
                <i class="bi bi-funnel me-2"></i>Filter Results
            </h5>
        </div>
        <div class="card-body">
            <form method="get" asp-action="ReportsIndex">
                <div class="row g-3 mb-3">
                    <!-- Category Filter -->
                    <div class="col-md-4">
                        <label class="form-label small text-muted fw-semibold">Category</label>
                        <select name="category" class="form-select">
                            <option value="">All Categories</option>
                            @foreach (var cat in Model.AvailableCategories)
                            {
                                <option value="@cat" selected="@(Model.CurrentFilters.Category == cat)">@cat</option>
                            }
                        </select>
                    </div>

                    <!-- Section Filter -->
                    <div class="col-md-4">
                        <label class="form-label small text-muted fw-semibold">Section</label>
                        <select name="section" class="form-select">
                            <option value="">All Sections</option>
                            @foreach (var sec in Model.AvailableSections)
                            {
                                <option value="@sec" selected="@(Model.CurrentFilters.Section == sec)">@sec</option>
                            }
                        </select>
                    </div>

                    <!-- User Search -->
                    <div class="col-md-4">
                        <label class="form-label small text-muted fw-semibold">User Search</label>
                        <input type="text" name="userSearch" class="form-control"
                               placeholder="Search by name or NIP..."
                               value="@Model.CurrentFilters.UserSearch" />
                    </div>
                </div>

                <div class="row g-3">
                    <!-- Start Date -->
                    <div class="col-md-4">
                        <label class="form-label small text-muted fw-semibold">Start Date</label>
                        <input type="date" name="startDate" class="form-control"
                               value="@Model.CurrentFilters.StartDate?.ToString("yyyy-MM-dd")" />
                    </div>

                    <!-- End Date -->
                    <div class="col-md-4">
                        <label class="form-label small text-muted fw-semibold">End Date</label>
                        <input type="date" name="endDate" class="form-control"
                               value="@Model.CurrentFilters.EndDate?.ToString("yyyy-MM-dd")" />
                    </div>

                    <!-- Buttons -->
                    <div class="col-md-4 d-flex align-items-end gap-2">
                        <button type="submit" class="btn btn-primary flex-fill">
                            <i class="bi bi-search me-1"></i>Apply Filters
                        </button>
                        <a asp-action="ReportsIndex" class="btn btn-outline-secondary">
                            <i class="bi bi-x-circle me-1"></i>Clear
                        </a>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <!-- Results Table -->
    <div class="card border-0 shadow-sm">
        <div class="card-header bg-white border-0 py-3 d-flex justify-content-between align-items-center">
            <h5 class="mb-0 fw-semibold">Assessment Results</h5>
            <div class="d-flex gap-2 align-items-center">
                <a href="@Url.Action("ExportResults", new {
                    category = Model.CurrentFilters.Category,
                    startDate = Model.CurrentFilters.StartDate?.ToString("yyyy-MM-dd"),
                    endDate = Model.CurrentFilters.EndDate?.ToString("yyyy-MM-dd"),
                    section = Model.CurrentFilters.Section,
                    userSearch = Model.CurrentFilters.UserSearch
                })" class="btn btn-success btn-sm">
                    <i class="bi bi-file-earmark-excel me-1"></i>Export to Excel
                </a>
                <span class="badge bg-primary">@Model.TotalAssessments Total</span>
            </div>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th class="px-4">#</th>
                            <th>Assessment</th>
                            <th>User</th>
                            <th>NIP</th>
                            <th>Section</th>
                            <th>Category</th>
                            <th>Score</th>
                            <th>Pass %</th>
                            <th>Status</th>
                            <th>Completed</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Assessments.Count == 0)
                        {
                            <tr>
                                <td colspan="11" class="text-center py-5">
                                    <i class="bi bi-inbox text-muted" style="font-size: 3rem;"></i>
                                    <p class="text-muted mt-2 mb-0">No results found</p>
                                    <small class="text-muted">Try adjusting your filters</small>
                                </td>
                            </tr>
                        }
                        else
                        {
                            @for (int i = 0; i < Model.Assessments.Count; i++)
                            {
                                var item = Model.Assessments[i];
                                var rowNum = (Model.CurrentPage - 1) * Model.PageSize + i + 1;
                                <tr>
                                    <td class="px-4">@rowNum</td>
                                    <td>
                                        <div class="fw-semibold">@item.Title</div>
                                    </td>
                                    <td>@item.UserName</td>
                                    <td>@(item.UserNIP ?? "-")</td>
                                    <td>@(item.UserSection ?? "-")</td>
                                    <td>
                                        <span class="badge bg-secondary">@item.Category</span>
                                    </td>
                                    <td class="fw-bold">@item.Score</td>
                                    <td>@item.PassPercentage%</td>
                                    <td>
                                        @if (item.IsPassed)
                                        {
                                            <span class="badge bg-success">Pass</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-danger">Fail</span>
                                        }
                                    </td>
                                    <td>
                                        @if (item.CompletedAt.HasValue)
                                        {
                                            @item.CompletedAt.Value.ToString("dd MMM yyyy HH:mm")
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td>
                                        <div class="btn-group btn-group-sm">
                                            <a href="@Url.Action("Results", new { id = item.Id })"
                                               class="btn btn-sm btn-outline-info"
                                               title="View results">
                                                <i class="bi bi-eye"></i>
                                            </a>
                                            <a href="@Url.Action("UserAssessmentHistory", new { userId = item.UserId })"
                                               class="btn btn-sm btn-outline-primary"
                                               title="View user history">
                                                <i class="bi bi-person-lines-fill"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>

        <!-- Pagination Footer -->
        @if (Model.TotalAssessments > 0)
        {
            <div class="card-footer bg-white border-0 py-3">
                <div class="d-flex justify-content-between align-items-center">
                    <!-- Showing X to Y of Z -->
                    <div class="text-muted small">
                        Showing @((Model.CurrentPage - 1) * Model.PageSize + 1) to @(Math.Min(Model.CurrentPage * Model.PageSize, Model.TotalAssessments)) of @Model.TotalAssessments
                    </div>

                    <!-- Pagination Controls -->
                    @if (Model.TotalPages > 1)
                    {
                        <nav>
                            <ul class="pagination pagination-sm mb-0">
                                <!-- First Page -->
                                <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
                                    <a class="page-link" href="?page=1&category=@Model.CurrentFilters.Category&section=@Model.CurrentFilters.Section&startDate=@Model.CurrentFilters.StartDate?.ToString("yyyy-MM-dd")&endDate=@Model.CurrentFilters.EndDate?.ToString("yyyy-MM-dd")&userSearch=@Model.CurrentFilters.UserSearch">
                                        <i class="bi bi-chevron-bar-left"></i>
                                    </a>
                                </li>

                                <!-- Previous Page -->
                                <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
                                    <a class="page-link" href="?page=@(Model.CurrentPage - 1)&category=@Model.CurrentFilters.Category&section=@Model.CurrentFilters.Section&startDate=@Model.CurrentFilters.StartDate?.ToString("yyyy-MM-dd")&endDate=@Model.CurrentFilters.EndDate?.ToString("yyyy-MM-dd")&userSearch=@Model.CurrentFilters.UserSearch">
                                        <i class="bi bi-chevron-left"></i>
                                    </a>
                                </li>

                                <!-- Page Numbers -->
                                @{
                                    var startPage = Math.Max(1, Model.CurrentPage - 2);
                                    var endPage = Math.Min(Model.TotalPages, Model.CurrentPage + 2);
                                }
                                @for (int p = startPage; p <= endPage; p++)
                                {
                                    <li class="page-item @(p == Model.CurrentPage ? "active" : "")">
                                        <a class="page-link" href="?page=@p&category=@Model.CurrentFilters.Category&section=@Model.CurrentFilters.Section&startDate=@Model.CurrentFilters.StartDate?.ToString("yyyy-MM-dd")&endDate=@Model.CurrentFilters.EndDate?.ToString("yyyy-MM-dd")&userSearch=@Model.CurrentFilters.UserSearch">
                                            @p
                                        </a>
                                    </li>
                                }

                                <!-- Next Page -->
                                <li class="page-item @(Model.CurrentPage == Model.TotalPages ? "disabled" : "")">
                                    <a class="page-link" href="?page=@(Model.CurrentPage + 1)&category=@Model.CurrentFilters.Category&section=@Model.CurrentFilters.Section&startDate=@Model.CurrentFilters.StartDate?.ToString("yyyy-MM-dd")&endDate=@Model.CurrentFilters.EndDate?.ToString("yyyy-MM-dd")&userSearch=@Model.CurrentFilters.UserSearch">
                                        <i class="bi bi-chevron-right"></i>
                                    </a>
                                </li>

                                <!-- Last Page -->
                                <li class="page-item @(Model.CurrentPage == Model.TotalPages ? "disabled" : "")">
                                    <a class="page-link" href="?page=@Model.TotalPages&category=@Model.CurrentFilters.Category&section=@Model.CurrentFilters.Section&startDate=@Model.CurrentFilters.StartDate?.ToString("yyyy-MM-dd")&endDate=@Model.CurrentFilters.EndDate?.ToString("yyyy-MM-dd")&userSearch=@Model.CurrentFilters.UserSearch">
                                        <i class="bi bi-chevron-bar-right"></i>
                                    </a>
                                </li>
                            </ul>
                        </nav>
                    }
                </div>
            </div>
        }
    </div>

</div>
