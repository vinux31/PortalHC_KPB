@model List<HcPortal.Models.TrainingRecord>

@{
    ViewData["Title"] = "Worker Training Detail";
    var workerName = ViewBag.WorkerName as string ?? "Worker";
    var workerId = ViewBag.WorkerId as string ?? "";
}

<!-- Header Section -->
<div class="container-fluid py-4">
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <a href="@Url.Action("Records", "CMP")" class="btn btn-outline-secondary btn-sm mb-2">
                        <i class="bi bi-arrow-left me-2"></i>Kembali ke Daftar Pekerja
                    </a>
                    <h2 class="fw-bold mb-1">Training Records Detail</h2>
                    <div class="d-flex align-items-center">
                        <div class="avatar-initial rounded-circle bg-primary text-white me-3 d-flex align-items-center justify-content-center" style="width: 50px; height: 50px; font-size: 1.5rem;">
                            @workerName.Substring(0, 1)
                        </div>
                        <div>
                            <h4 class="mb-0">@workerName</h4>
                            <small class="text-muted">Worker ID: @workerId</small>
                        </div>
                    </div>
                </div>
                <div>
                    <button class="btn btn-success" onclick="exportWorkerRecords()">
                        <i class="bi bi-file-earmark-excel me-2"></i>Export to Excel
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Summary Cards -->
    <div class="row g-3 mb-4">
        <div class="col-md-3">
            <div class="card border-0 shadow-sm h-100" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
                <div class="card-body text-white">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-white-50 mb-2">Total Training</h6>
                            <h2 class="fw-bold mb-0">@Model.Count</h2>
                        </div>
                        <div class="bg-white bg-opacity-25 rounded-circle p-3">
                            <i class="bi bi-clipboard-check" style="font-size: 2rem;"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm h-100" style="background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);">
                <div class="card-body text-white">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-white-50 mb-2">Completed</h6>
                            <h2 class="fw-bold mb-0">@Model.Count(x => x.Status == "Passed" || x.Status == "Valid")</h2>
                        </div>
                        <div class="bg-white bg-opacity-25 rounded-circle p-3">
                            <i class="bi bi-check-circle-fill" style="font-size: 2rem;"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm h-100" style="background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);">
                <div class="card-body text-white">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-white-50 mb-2">Pending</h6>
                            <h2 class="fw-bold mb-0">@Model.Count(x => x.Status == "Wait Certificate")</h2>
                        </div>
                        <div class="bg-white bg-opacity-25 rounded-circle p-3">
                            <i class="bi bi-hourglass-split" style="font-size: 2rem;"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm h-100" style="background: linear-gradient(135deg, #fa709a 0%, #fee140 100%);">
                <div class="card-body text-white">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-white-50 mb-2">Expiring Soon</h6>
                            <h2 class="fw-bold mb-0">@Model.Count(x => x.ValidUntil.HasValue && x.ValidUntil.Value <= DateTime.Now.AddMonths(3))</h2>
                        </div>
                        <div class="bg-white bg-opacity-25 rounded-circle p-3">
                            <i class="bi bi-exclamation-triangle-fill" style="font-size: 2rem;"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Filter and Search Section -->
    <div class="card border-0 shadow-sm mb-4">
        <div class="card-body">
            <div class="row g-3 align-items-end">
                <div class="col-md-4">
                    <label class="form-label fw-bold small">Filter by Category</label>
                    <select class="form-select" id="categoryFilter" onchange="filterRecords()">
                        <option value="">All Categories</option>
                        <option value="Proton">PROTON</option>
                        <option value="OTS">OTS</option>
                        <option value="OJT">OJT</option>
                        <option value="IHT">IHT</option>
                        <option value="MANDATORY">Mandatory HSSE</option>
                        <option value="Training Licencor">Training Licencor</option>
                        <option value="ISS">ISS</option>
                        <option value="OSS">OSS</option>
                    </select>
                </div>
                <div class="col-md-4">
                    <label class="form-label fw-bold small">Filter by Status</label>
                    <select class="form-select" id="statusFilter" onchange="filterRecords()">
                        <option value="">All Status</option>
                        <option value="Passed">Passed</option>
                        <option value="Valid">Valid</option>
                        <option value="Wait Certificate">Wait Certificate</option>
                    </select>
                </div>
                <div class="col-md-4">
                    <label class="form-label fw-bold small">Search Training</label>
                    <input type="text" class="form-control" id="searchInput" placeholder="Search by training name..." onkeyup="filterRecords()">
                </div>
            </div>
        </div>
    </div>

    <!-- Training Records Table -->
    <div class="card border-0 shadow-sm">
        <div class="card-header bg-white border-bottom py-3">
            <h5 class="mb-0 fw-bold">
                <i class="bi bi-list-check me-2"></i>Training Records
            </h5>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0" id="trainingTable">
                    <thead class="table-light">
                        <tr>
                            <th class="p-3" style="width: 5%;">No</th>
                            <th class="p-3" style="width: 30%;">Nama Training</th>
                            <th class="p-3" style="width: 12%;">Kategori</th>
                            <th class="p-3" style="width: 10%;">Tanggal</th>
                            <th class="p-3" style="width: 15%;">Penyelenggara</th>
                            <th class="p-3" style="width: 10%;">Status</th>
                            <th class="p-3" style="width: 10%;">Valid Until</th>
                            <th class="p-3 text-center" style="width: 8%;">Certificate</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            int rowNumber = 1;
                        }
                        @foreach (var record in Model.OrderByDescending(x => x.Tanggal))
                        {
                            var statusBadge = record.Status switch
                            {
                                "Passed" => "bg-success",
                                "Valid" => "bg-success",
                                "Wait Certificate" => "bg-warning text-dark",
                                _ => "bg-secondary"
                            };

                            var categoryBadge = record.Kategori switch
                            {
                                "Proton" => "bg-primary",
                                "OTS" => "bg-info",
                                "OJT" => "bg-warning text-dark",
                                "IHT" => "bg-secondary",
                                "MANDATORY" => "bg-danger",
                                _ => "bg-dark"
                            };

                            var isExpiringSoon = record.ValidUntil.HasValue && record.ValidUntil.Value <= DateTime.Now.AddMonths(3) && record.ValidUntil.Value > DateTime.Now;
                            var isExpired = record.ValidUntil.HasValue && record.ValidUntil.Value < DateTime.Now;

                            <tr class="training-row" data-category="@record.Kategori" data-status="@record.Status" data-title="@(record.Judul?.ToLower() ?? "")">
                                <td class="p-3 text-center">@rowNumber</td>
                                <td class="p-3">
                                    <div class="fw-bold">@record.Judul</div>
                                </td>
                                <td class="p-3">
                                    <span class="badge @categoryBadge">@record.Kategori</span>
                                </td>
                                <td class="p-3">
                                    <small>@record.Tanggal.ToString("dd MMM yyyy")</small>
                                </td>
                                <td class="p-3">
                                    <small class="text-muted">@record.Penyelenggara</small>
                                </td>
                                <td class="p-3">
                                    <span class="badge @statusBadge">@record.Status</span>
                                </td>
                                <td class="p-3">
                                    @if (record.ValidUntil.HasValue)
                                    {
                                        if (isExpired)
                                        {
                                            <span class="badge bg-danger">
                                                <i class="bi bi-x-circle me-1"></i>Expired
                                            </span>
                                        }
                                        else if (isExpiringSoon)
                                        {
                                            <span class="badge bg-warning text-dark">
                                                <i class="bi bi-exclamation-triangle me-1"></i>@record.ValidUntil.Value.ToString("dd MMM yyyy")
                                            </span>
                                        }
                                        else
                                        {
                                            <small class="text-success">@record.ValidUntil.Value.ToString("dd MMM yyyy")</small>
                                        }
                                    }
                                    else
                                    {
                                        <small class="text-muted">-</small>
                                    }
                                </td>
                                <td class="p-3 text-center">
                                    @if (!string.IsNullOrEmpty(record.SertifikatUrl))
                                    {
                                        <a href="@record.SertifikatUrl" class="btn btn-sm btn-outline-primary" target="_blank" title="View Certificate">
                                            <i class="bi bi-file-earmark-pdf"></i>
                                        </a>
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                            </tr>
                            rowNumber++;
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<style>
    .training-row {
        transition: all 0.2s ease;
    }

    .training-row:hover {
        background-color: #f8f9ff;
        transform: scale(1.005);
    }

    .table-responsive {
        max-height: 600px;
        overflow-y: auto;
    }

    .table thead {
        position: sticky;
        top: 0;
        z-index: 10;
        background: white;
    }
</style>

<script>
    function filterRecords() {
        const categoryFilter = document.getElementById('categoryFilter').value.toLowerCase();
        const statusFilter = document.getElementById('statusFilter').value.toLowerCase();
        const searchInput = document.getElementById('searchInput').value.toLowerCase();
        const rows = document.querySelectorAll('.training-row');

        rows.forEach(row => {
            const category = row.getAttribute('data-category').toLowerCase();
            const status = row.getAttribute('data-status').toLowerCase();
            const title = row.getAttribute('data-title');

            const categoryMatch = !categoryFilter || category === categoryFilter;
            const statusMatch = !statusFilter || status === statusFilter;
            const searchMatch = !searchInput || title.includes(searchInput);

            if (categoryMatch && statusMatch && searchMatch) {
                row.style.display = '';
            } else {
                row.style.display = 'none';
            }
        });

        // Update row numbers
        let visibleNumber = 1;
        rows.forEach(row => {
            if (row.style.display !== 'none') {
                row.querySelector('td:first-child').textContent = visibleNumber++;
            }
        });
    }

    function exportWorkerRecords() {
        const workerName = '@workerName';
        const rows = Array.from(document.querySelectorAll('.training-row')).filter(row => row.style.display !== 'none');

        if (rows.length === 0) {
            alert('No data to export');
            return;
        }

        let csv = 'No,Nama Training,Kategori,Tanggal,Penyelenggara,Status,Valid Until\n';

        rows.forEach((row, index) => {
            const cells = row.querySelectorAll('td');
            const no = index + 1;
            const nama = cells[1].querySelector('.fw-bold').textContent.trim();
            const kategori = cells[2].textContent.trim();
            const tanggal = cells[3].textContent.trim();
            const penyelenggara = cells[4].textContent.trim();
            const status = cells[5].textContent.trim();
            const validUntil = cells[6].textContent.trim();

            csv += `${no},"${nama}","${kategori}","${tanggal}","${penyelenggara}","${status}","${validUntil}"\n`;
        });

        const blob = new Blob([csv], { type: 'text/csv;charset=utf-8;' });
        const link = document.createElement('a');
        const url = URL.createObjectURL(blob);

        link.setAttribute('href', url);
        link.setAttribute('download', `Training_Records_${workerName.replace(/\s+/g, '_')}_${new Date().toISOString().split('T')[0]}.csv`);
        link.style.visibility = 'hidden';

        document.body.appendChild(link);
        link.click();
        document.body.removeChild(link);
    }
</script>
