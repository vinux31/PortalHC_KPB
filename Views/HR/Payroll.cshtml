@model List<HcPortal.Models.PayrollItem>

@{
    ViewData["Title"] = "E-Payroll";
    var latestSalary = Model.FirstOrDefault(); // Ambil data paling atas (terbaru)
}

<div class="mb-4">
    <h2 class="fw-bold">E-Payroll System</h2>
    <p class="text-muted">Informasi remunerasi dan slip gaji elektronik.</p>
</div>

@if (latestSalary != null)
{
    <div class="card bg-primary text-white mb-4 shadow border-0">
        <div class="card-body p-4">
            <div class="row align-items-center">
                <div class="col-md-8">
                    <h6 class="opacity-75">Take Home Pay (Periode @latestSalary.Periode)</h6>
                    <h1 class="display-4 fw-bold mb-0">Rp @latestSalary.TakeHomePay.ToString("N0")</h1>
                    <p class="mb-0 mt-2"><i class="bi bi-check-circle-fill"></i> Ditransfer pada @latestSalary.TanggalTransfer.ToString("dd MMM yyyy")</p>
                </div>
                <div class="col-md-4 text-end d-none d-md-block">
                    <i class="bi bi-wallet2" style="font-size: 5rem; opacity: 0.3;"></i>
                </div>
            </div>
        </div>
    </div>
}

<h5 class="fw-bold mb-3">Riwayat Slip Gaji</h5>
<div class="card shadow-sm border-0">
    <div class="card-body p-0">
        <table class="table table-hover align-middle mb-0">
            <thead class="bg-light">
                <tr>
                    <th class="p-3">Periode</th>
                    <th class="p-3 text-end">Pendapatan</th>
                    <th class="p-3 text-end">Potongan</th>
                    <th class="p-3 text-end">Total Diterima</th>
                    <th class="p-3 text-center">Status</th>
                    <th class="p-3 text-center">Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="p-3 fw-bold">@item.Periode</td>
                        <td class="p-3 text-end text-success">Rp @((item.GajiPokok + item.Tunjangan).ToString("N0"))</td>
                        <td class="p-3 text-end text-danger">- Rp @item.Potongan.ToString("N0")</td>
                        <td class="p-3 text-end fw-bold">Rp @item.TakeHomePay.ToString("N0")</td>
                        <td class="p-3 text-center">
                            <span class="badge bg-success bg-opacity-10 text-success border border-success">@item.Status</span>
                        </td>
                        <td class="p-3 text-center">
                            <button class="btn btn-sm btn-outline-primary"><i class="bi bi-download"></i> PDF</button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>