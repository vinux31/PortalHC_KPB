@{
    ViewData["Title"] = "Employee Services";
}

<div class="text-center mb-5">
    <h2 class="fw-bold">Employee Self-Service</h2>
    <p class="text-muted">Pusat layanan administrasi mandiri. Pilih layanan yang Anda butuhkan.</p>
</div>

<div class="container">
    <div class="row g-4 justify-content-center">
        
        <div class="col-md-4 col-lg-3">
            <div class="card h-100 text-center shadow-sm hover-effect border-0">
                <div class="card-body py-5">
                    <div class="icon-box bg-primary bg-opacity-10 text-primary rounded-circle mx-auto mb-3 d-flex align-items-center justify-content-center" style="width: 70px; height: 70px;">
                        <i class="bi bi-calendar2-check" style="font-size: 2rem;"></i>
                    </div>
                    <h5 class="fw-bold">Pengajuan Cuti</h5>
                    <p class="text-muted small">Cuti tahunan, sakit, dan izin khusus.</p>
                    <button class="btn btn-outline-primary btn-sm rounded-pill px-4" onclick="alert('Simulasi: Form Cuti dibuka')">Ajukan</button>
                </div>
            </div>
        </div>

        <div class="col-md-4 col-lg-3">
            <div class="card h-100 text-center shadow-sm hover-effect border-0">
                <div class="card-body py-5">
                    <div class="icon-box bg-success bg-opacity-10 text-success rounded-circle mx-auto mb-3 d-flex align-items-center justify-content-center" style="width: 70px; height: 70px;">
                        <i class="bi bi-file-earmark-text" style="font-size: 2rem;"></i>
                    </div>
                    <h5 class="fw-bold">Surat Keterangan</h5>
                    <p class="text-muted small">Request SK Kerja, Visa, atau Referensi Bank.</p>
                    <button class="btn btn-outline-success btn-sm rounded-pill px-4" onclick="alert('Simulasi: Form Request SK dibuka')">Request</button>
                </div>
            </div>
        </div>

        <div class="col-md-4 col-lg-3">
            <div class="card h-100 text-center shadow-sm hover-effect border-0">
                <div class="card-body py-5">
                    <div class="icon-box bg-danger bg-opacity-10 text-danger rounded-circle mx-auto mb-3 d-flex align-items-center justify-content-center" style="width: 70px; height: 70px;">
                        <i class="bi bi-heart-pulse" style="font-size: 2rem;"></i>
                    </div>
                    <h5 class="fw-bold">Klaim Kesehatan</h5>
                    <p class="text-muted small">Reimburse kacamata, rawat jalan, & gigi.</p>
                    <button class="btn btn-outline-danger btn-sm rounded-pill px-4" onclick="alert('Simulasi: Form Reimburse dibuka')">Klaim</button>
                </div>
            </div>
        </div>

        <div class="col-md-4 col-lg-3">
            <div class="card h-100 text-center shadow-sm hover-effect border-0">
                <div class="card-body py-5">
                    <div class="icon-box bg-warning bg-opacity-10 text-dark rounded-circle mx-auto mb-3 d-flex align-items-center justify-content-center" style="width: 70px; height: 70px;">
                        <i class="bi bi-person-gear" style="font-size: 2rem;"></i>
                    </div>
                    <h5 class="fw-bold">Update Profil</h5>
                    <p class="text-muted small">Ubah alamat, NPWP, dan Data Keluarga.</p>
                    <button class="btn btn-outline-dark btn-sm rounded-pill px-4" onclick="alert('Simulasi: Halaman Profil dibuka')">Update</button>
                </div>
            </div>
        </div>

        <div class="col-md-4 col-lg-3">
            <div class="card h-100 text-center shadow-sm hover-effect border-0">
                <div class="card-body py-5">
                    <div class="icon-box bg-info bg-opacity-10 text-info rounded-circle mx-auto mb-3 d-flex align-items-center justify-content-center" style="width: 70px; height: 70px;">
                        <i class="bi bi-building" style="font-size: 2rem;"></i>
                    </div>
                    <h5 class="fw-bold">Booking Ruangan</h5>
                    <p class="text-muted small">Reservasi ruang meeting & kendaraan.</p>
                    <button class="btn btn-outline-info btn-sm rounded-pill px-4" onclick="alert('Simulasi: Booking System dibuka')">Booking</button>
                </div>
            </div>
        </div>

        <div class="col-md-4 col-lg-3">
            <div class="card h-100 text-center shadow-sm hover-effect border-0">
                <div class="card-body py-5">
                    <div class="icon-box bg-secondary bg-opacity-10 text-secondary rounded-circle mx-auto mb-3 d-flex align-items-center justify-content-center" style="width: 70px; height: 70px;">
                        <i class="bi bi-headset" style="font-size: 2rem;"></i>
                    </div>
                    <h5 class="fw-bold">HC Helpdesk</h5>
                    <p class="text-muted small">Bantuan teknis dan pertanyaan HR.</p>
                    <button class="btn btn-outline-secondary btn-sm rounded-pill px-4" onclick="alert('Simulasi: Chat Helpdesk dibuka')">Hubungi</button>
                </div>
            </div>
        </div>

    </div>
</div>

<style>
    /* Efek Hover biar kartu sedikit naik saat disorot mouse */
    .hover-effect {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }
    .hover-effect:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 20px rgba(0,0,0,0.1) !important;
    }
</style>