@model HcPortal.Models.DashboardHomeViewModel
@{
    ViewData["Title"] = "Home Page";
}

<link rel="stylesheet" href="~/css/home.css" />

<!-- Hero Section -->
<div class="hero-section" data-aos="fade-down">
    <div class="hero-content">
        <div class="row align-items-center">
            <div class="col-md-9">
                <div class="d-flex align-items-center gap-4">
                    <div class="hero-avatar">
                        <i class="fas fa-user"></i>
                    </div>
                    <div>
                        <h1 class="hero-greeting mb-2">
                            @Model.Greeting, @Model.CurrentUser.FullName!
                        </h1>
                        <p class="hero-subtitle mb-0">
                            <span class="hero-badge">
                                <i class="fas fa-briefcase"></i>
                                @(Model.CurrentUser.Position ?? "Staff")
                            </span>
                            <span class="hero-badge ms-2">
                                <i class="fas fa-building"></i>
                                @(Model.CurrentUser.Unit ?? "N/A")
                            </span>
                        </p>
                    </div>
                </div>
            </div>
            <div class="col-md-3 text-end">
                <p class="mb-0 fs-5 fw-semibold">@DateTime.Now.ToString("dddd")</p>
                <p class="mb-0 fs-6 opacity-75">@DateTime.Now.ToString("dd MMMM yyyy")</p>
            </div>
        </div>
    </div>
</div>

<!-- Dashboard Cards -->
<div class="row mb-4 g-4">
    <!-- IDP Status Card -->
    <div class="col-md-4" data-aos="fade-up" data-aos-delay="100">
        <div class="glass-card card-primary h-100">
            <div class="card-body p-4">
                <div class="card-icon-wrapper icon-primary">
                    <i class="fas fa-chart-line"></i>
                </div>
                <h5 class="card-title fw-bold mb-3">My IDP Status</h5>
                
                <!-- Circular Progress -->
                @{
                    var circumference = 2 * Math.PI * 52;
                    var offset = circumference * (1 - Model.IdpProgressPercentage / 100.0);
                }
                <div class="circular-progress">
                    <svg width="120" height="120">
                        <defs>
                            <linearGradient id="gradient-progress" x1="0%" y1="0%" x2="100%" y2="100%">
                                <stop offset="0%" style="stop-color:#667eea;stop-opacity:1" />
                                <stop offset="100%" style="stop-color:#764ba2;stop-opacity:1" />
                            </linearGradient>
                        </defs>
                        <circle class="circle-bg" cx="60" cy="60" r="52"></circle>
                        <circle class="circle-progress" cx="60" cy="60" r="52"
                                stroke-dasharray="@circumference"
                                stroke-dashoffset="@offset"></circle>
                    </svg>
                    <div class="circular-progress-text">@Model.IdpProgressPercentage%</div>
                </div>

                <p class="text-center text-muted mb-3">@Model.IdpCompletedCount Aktivitas selesai dari @Model.IdpTotalCount</p>
                <a asp-controller="CDP" asp-action="Index" class="btn btn-outline-primary w-100 rounded-pill">
                    <i class="fas fa-arrow-right me-2"></i>Update Progress
                </a>
            </div>
        </div>
    </div>

    <!-- Pending Assessment Card -->
    <div class="col-md-4" data-aos="fade-up" data-aos-delay="200">
        <div class="glass-card card-warning h-100">
            <div class="card-body p-4">
                <div class="card-icon-wrapper icon-warning">
                    <i class="fas fa-clipboard-check"></i>
                </div>
                <h5 class="card-title fw-bold mb-3">Pending Assessment</h5>
                
                <div class="d-flex align-items-center justify-content-center mb-3">
                    <h1 class="display-3 fw-bold gradient-text mb-0">@Model.PendingAssessmentCount</h1>
                    @if (Model.HasUrgentAssessments)
                    {
                        <span class="badge bg-danger ms-3">Urgent</span>
                    }
                </div>

                <p class="text-center text-muted mb-3">
                    @if (Model.PendingAssessmentCount > 0)
                    {
                        @:Anda memiliki assessment yang belum disubmit
                    }
                    else
                    {
                        @:Tidak ada assessment pending
                    }
                </p>
                <a asp-controller="CMP" asp-action="Index" class="btn btn-outline-danger w-100 rounded-pill">
                    <i class="fas fa-play me-2"></i>Kerjakan Sekarang
                </a>
            </div>
        </div>
    </div>

    <!-- Mandatory Training Card -->
    <div class="col-md-4" data-aos="fade-up" data-aos-delay="300">
        <div class="glass-card card-success h-100">
            <div class="card-body p-4">
                <div class="card-icon-wrapper icon-success">
                    <i class="fas fa-certificate"></i>
                </div>
                <h5 class="card-title fw-bold mb-3">Mandatory Training</h5>
                
                <div class="text-center mb-3">
                    @if (Model.MandatoryTrainingStatus.IsValid)
                    {
                        <i class="fas fa-check-circle text-success" style="font-size: 4rem;"></i>
                        <h2 class="fw-bold text-success mt-2">@Model.MandatoryTrainingStatus.Status</h2>
                    }
                    else
                    {
                        <i class="fas fa-times-circle text-danger" style="font-size: 4rem;"></i>
                        <h2 class="fw-bold text-danger mt-2">@Model.MandatoryTrainingStatus.Status</h2>
                    }
                </div>

                <p class="text-center text-muted mb-3">
                    @if (Model.MandatoryTrainingStatus.ValidUntil.HasValue)
                    {
                        @:Sertifikat HSSE berlaku sampai @Model.MandatoryTrainingStatus.ValidUntil.Value.ToString("MMM yyyy")
                    }
                    else
                    {
                        @:Belum ada sertifikat HSSE
                    }
                </p>

                @if (!string.IsNullOrEmpty(Model.MandatoryTrainingStatus.CertificateUrl))
                {
                    <a href="@Model.MandatoryTrainingStatus.CertificateUrl" target="_blank"
                       class="btn btn-outline-primary w-100 rounded-pill">
                        <i class="fas fa-download me-2"></i>Download Sertifikat
                    </a>
                }
                else
                {
                    <button class="btn btn-outline-secondary w-100 rounded-pill" disabled>
                        <i class="fas fa-download me-2"></i>Download Sertifikat
                    </button>
                }
            </div>
        </div>
    </div>
</div>

<!-- Quick Access Section -->
<div class="section-header" data-aos="fade-right">
    <div class="section-icon">
        <i class="fas fa-bolt"></i>
    </div>
    <h4>Quick Access</h4>
</div>

<div class="row mb-5 g-4">
    <div class="col-md-4 col-6" data-aos="zoom-in" data-aos-delay="100">
        <a asp-controller="CDP" asp-action="Index" class="quick-access-card">
            <div class="quick-access-icon">
                <i class="fas fa-calendar-alt"></i>
            </div>
            <h6 class="quick-access-title">My IDP</h6>
        </a>
    </div>
    <div class="col-md-4 col-6" data-aos="zoom-in" data-aos-delay="200">
        <a asp-controller="CMP" asp-action="Assessment" class="quick-access-card">
            <div class="quick-access-icon" style="background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);">
                <i class="fas fa-edit"></i>
            </div>
            <h6 class="quick-access-title">Assessment</h6>
        </a>
    </div>

    <div class="col-md-4 col-6" data-aos="zoom-in" data-aos-delay="300">
        <a asp-controller="CMP" asp-action="Index" class="quick-access-card">
            <div class="quick-access-icon" style="background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);">
                <i class="fas fa-book"></i>
            </div>
            <h6 class="quick-access-title">Library KKJ</h6>
        </a>
    </div>
</div>

<!-- Recent Activity & Upcoming Deadlines -->
<div class="row g-4">
    <!-- Recent Activity Timeline -->
    <div class="col-md-6" data-aos="fade-right">
        <div class="section-header">
            <div class="section-icon">
                <i class="fas fa-history"></i>
            </div>
            <h4>Recent Activity</h4>
        </div>
        
        <div class="timeline">
            @if (Model.RecentActivities.Any())
            {
                @foreach (var activity in Model.RecentActivities)
                {
                    <div class="timeline-item">
                        <div class="timeline-marker"></div>
                        <div class="timeline-content">
                            <div class="timeline-title">@activity.Title</div>
                            <div class="timeline-description">@activity.Description</div>
                            <div class="timeline-time">
                                <i class="far fa-clock me-1"></i>@activity.TimeAgo
                            </div>
                        </div>
                    </div>
                }
            }
            else
            {
                <div class="text-center text-muted py-4">
                    <i class="fas fa-inbox fa-2x mb-2"></i>
                    <p>Belum ada aktivitas terbaru</p>
                </div>
            }
        </div>
    </div>

    <!-- Upcoming Deadlines -->
    <div class="col-md-6" data-aos="fade-left">
        <div class="section-header">
            <div class="section-icon">
                <i class="fas fa-bell"></i>
            </div>
            <h4>Upcoming Deadlines</h4>
        </div>
        
        @if (Model.UpcomingDeadlines.Any())
        {
            @foreach (var deadline in Model.UpcomingDeadlines)
            {
                <div class="deadline-card">
                    <div class="deadline-icon">
                        <i class="@deadline.IconClass"></i>
                    </div>
                    <div class="deadline-content">
                        <div class="deadline-title">@deadline.Title</div>
                        <div class="deadline-date">
                            <i class="far fa-calendar me-1"></i>Due: @deadline.DueDateFormatted
                        </div>
                    </div>
                    <span class="deadline-badge @deadline.UrgencyClass">
                        @deadline.DaysRemaining days
                    </span>
                </div>
            }
        }
        else
        {
            <div class="text-center text-muted py-4">
                <i class="fas fa-check-double fa-2x mb-2"></i>
                <p>Tidak ada deadline mendatang</p>
            </div>
        }
    </div>
</div>